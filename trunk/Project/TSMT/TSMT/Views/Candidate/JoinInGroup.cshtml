@{
    ViewBag.Title = "JoinInGroup";
}

@using TSMT.Models;
@model IEnumerable<ExaminationsPaper>

@{ 
    ExaminationsPaper ep = (ExaminationsPaper)ViewData["ep"];
    int counter = 1;
}
<table class="table table-hover" id="showdata">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên</th>
            <th>Trạng thái nhóm</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ExaminationsPaper item in Model)
        {
            <tr>
                <td>@counter @{++counter;}</td>
                <td>@item.Candidate.Account.Profile.Lastname @item.Candidate.Account.Profile.Firstname</td>
                <td>
                    @if (item.GroupID == null)
                    {
                        <text>Chưa có nhóm</text>
                    }
                    else
                    {
                        <text>Đã có nhóm</text>
                    }
                </td>
                <td>
                    @if (ep.GroupID == null && item.GroupID == null) // A chưa có, B chưa có
                    {
                    }
                    else if (ep.GroupID == null && item.GroupID != null) // A chưa có, B có
                    {
                        <text>Gia nhập nhóm</text>
                    }
                    else if (ep.GroupID != null && item.GroupID == null) // A có, B chưa có
                    {
                        <text>Mời vào nhóm</text>
                    }
                    else if (ep.GroupID != null && item.GroupID != null) // A có, B có
                    {
                        <text>Mời vào nhóm || Gia nhập nhóm</text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
