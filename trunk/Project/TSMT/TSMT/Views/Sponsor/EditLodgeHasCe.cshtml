@using TSMT.Models
@model TSMT.Models.Lodge
@{
    ViewBag.Title = "Thay đổi thông tin chỗ trọ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="/Content/css/TSMTPlaces.css" rel="stylesheet">
<link href="/Content/css/TSMTPopup.css" rel="stylesheet">
<script src="/Content/js/jquery.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry,places&sensor=false"></script>
<script src="/Content/js/TSMTPlaces.js"></script>
<script src="/Content/js/TSMTPopup.js"></script>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Sponsor")">Nhà tài trợ</a></li>
                <li><a href="@Url.Action("ManageLodge", "Sponsor")">Quản lý chỗ ở</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}

@using (Html.BeginForm("EditLodgeHasCe", "Sponsor", FormMethod.Post, new { id = "FormEditLodgeHasCe" }))
{
    <input type="hidden" name="lodgeId" value="@Model.LodgeID"/>
    <input type="hidden" id="Longitude" name="Longitude" value="@Model.Longitude"/>
    <input type="hidden" id="Latitude" name="Latitude" value="@Model.Latitude"/>
    <div class="col-md-12 margin-bottom-5">
        <div class="panel panel-green">
            <div class="panel-heading">
                <h3 class="panel-title" id="scrollToMe"><i class="fa fa-list"></i>&nbsp;Thay đổi thông tin địa điểm thi
                </h3>
            </div>

            <table class="table table-hover">
                <tr style="text-align: center">
                    <td>Kì Thi</td>
                    <td>
                        @Model.ChairitiesExam.Examination.Name
                </tr>
                <tr style="text-align: center">
                    <td>Tài Trợ Cho</td>
                    <td>
                        @Model.ChairitiesExam.Charity.Name
                </tr>
                <tr style="text-align: center">
                    <td style="vertical-align: middle">Địa chỉ</td>
                    <td>
                        <input type="text" name="Address" id="Address" class="form-control" value="@Model.Address"/></td>
                    <td>
                        @*<input type="button" value="Đi đến địa điểm thi" class="btn-u btn-u-sea margin-bottom-5" onclick="goThere(true)" />*@
                        <a href="#" onclick="goThere(true)" class="btn-u btn-u-sea margin-bottom-5"><i class="fa fa-hand-right"></i>&nbsp;Đi đến địa điểm thi</a>

                    </td>
                </tr>
            </table>
            @* <input type="submit" value="Submit" class="btn btn-info" />
        <input type="reset" value="Reset" class="btn btn-info" />
        <input type="button" value="Cancel" class="btn btn-info" onclick="location.href = '/admin/ManageVenue/' @Model.UniversitiesExamination.UniExamID"/>*@
        </div>
    </div>
    <div class="col-md-12" id="showMap">
        <div class="row">
            <div class="col-md-3" style="width: 268px; height: auto">
                <div class="input-group margin-bottom-5">
                    <table class="table">
                        <tr>
                            <td id="guideMove" colspan="2" style="visibility: hidden; color: red">* Di chuyển marker để thay đổi vị trí</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <span id="guideSuggest" style="color: blue; visibility: hidden"># Danh sách địa chỉ gợi ý:</span></td>
                        </tr>
                        <tr>
                            <td>
                                <div id="suggest"></div>
                            </td>
                        </tr>
                    </table>
                    <input type="submit" value="Lưu" class="btn-u btn-u-green" onclick="return PrepareDataToSubmit()" />
                    <input type="button" value="Quay Về" class="btn btn-info" onclick="location.href = '/Sponsor/ManageLodge/' " />
                    @*@Html.ActionLink("Hủy", "ManageVenue", new { id = @ViewData["ueId"] }, new { @class = "btn btn-info" })*@
                </div>
            </div>
            <div class="col-md-9" id="map_canvas" style="height: 500px; vertical-align: middle">
            </div>
        </div>
    </div>   
}
