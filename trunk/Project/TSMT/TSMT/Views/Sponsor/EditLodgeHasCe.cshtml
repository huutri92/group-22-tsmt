@using TSMT.Models
@model TSMT.Models.Lodge
@{
    ViewBag.Title = "EditLodgeHasCe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditLodgeHasCe", "Sponsor", FormMethod.Post))
{
    
    <input type="hidden" name="lodgeId" value="@Model.LodgeID"/>
    
    
    <div class="col-md-9">
        <div class="panel panel-green margin-bottom-20">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="icon-list"></i>Thay đổi thông tin chỗ trọ
                </h3>

            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <tr>
                        <td>Kì Thi</td>
                        <td>
                            <input type="text" name="examname" value="@Model.ChairitiesExam.Examination.Name" readonly="true" class="form-control"/></td>
                    </tr>
                    <tr>
                        <td>Tài Trợ Cho</td>
                        <td>
                            <input type="text" name="charityname" value="@Model.ChairitiesExam.CharityExamName" readonly="true" class="form-control"/></td>
                    </tr>
                    <tr>
                        <td>Địa chỉ</td>
                        <td>
                            <input type="text" name="Address" value="@Model.Address" class="form-control"/></td>
                    </tr>

                    <tr>
                        <td colspan="2">
                            <input type="button"  class="btn btn-info" onclick="history.go(-1);" value="Quay lại" />
                            <input type="submit" value="Submit" class="btn btn-info" />
                            <input type="reset" value="Reset" class="btn btn-info" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
}

