@using TSMT.Models
@model IEnumerable<Car>
@{
    ViewBag.Title = "Quản lý xe";
    ViewBag.Active = "ManageCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="/Content/css/TSMTPopup.css" rel="stylesheet">
<script src="/Content/js/TSMTPopup.js"></script>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Sponsor")">Nhà tài trợ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_SponsorSidebarPartial")



<div class="col-md-9">
    <div class="panel panel-green margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Quản lý xe
                <a href="@Url.Action("AddCar", "Sponsor")" class="btn-u btn-u-green"><i class="icon-pencil"></i>Tạo Mới Xe</a>
            </h3>
        </div>
        <div class="panel-body">
            <div class="tab-v1">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#notsponsored" data-toggle="tab">Xe Chưa Tài Trợ</a></li>
                    <li><a href="#sponsored" data-toggle="tab">Xe Đã Tài Trợ</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="notsponsored">
                        <div id="showMessage" class="alert alert-danger fade in" style="display: none">
                            @*<button type="button" class="close" data-dismiss="alert">×</button>*@
                            <strong>Bạn không có xe để tài trợ!</strong> Bạn hãy nhấn vào nút "Tạo mới" để tạo mới xe cho mình.
                        </div>
                        <table class="table table-hover" id="showdata">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Biển số</th>
                                    <th>Số chỗ </th>
                                    <th>Tên tài xế</th>
                                    <th>SĐT tài xế</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                @if ((Model.Count(r => r.CharityExamID == null) == 0 ))
                                {
                                    <tr>
                                        <td>
                                            <script type="text/javascript">
                                                document.getElementById("showdata").style.display = "none";
                                                document.getElementById("showMessage").style.display = "block";
                                            </script>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    int counter = 1;

                                    foreach (var car in ViewData["CarNotSponsored"] as IEnumerable<Car>)
                                    {                   
                                    <tr>
                                        <td>@counter</td>
                                        <td>@car.NumberPlate</td>
                                        <td>@car.TotalSlots</td>
                                        <td>@car.DriverName</td>
                                        <td>@car.DriverPhone</td>
                                        <td>
                                            <a href="@Url.Action("EditCarNotCe", "Sponsor", new { carId = @car.CarID })" class="btn-u" title="Chỉnh sửa"><i class="icon-edit"></i></a>
                                             <a href="@Url.Action("EditCar", "Sponsor", new { carId = @car.CarID })" class="btn-u btn-u-red" title="Tài Trợ"><i class="icon-heart"></i></a>
                                            @Html.ActionLink("Xóa Xe", "DeleteCar", new { carId = @car.CarID }, new { onclick = "return showPopup('Bạn có chắc sẽ xóa xe này?', this.href);" })
                                        </td>


                                    </tr>
                                        ++counter;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="sponsored">
                        <div id="showMessage1" class="alert alert-danger fade in" style="display: none">
                            @*<button type="button" class="close" data-dismiss="alert">×</button>*@
                            <strong>Bạn chưa tài trợ xe nào!</strong> 
                        </div>
                        <table class="table table-hover" id ="showdata1">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Kỳ thi</th>
                                    <th>Tài Trợ Cho</th>
                                    <th>Biển số</th>
                                    <th>Chỗ còn trống</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                 @if ((Model.Count(r => r.CharityExamID != null) == 0 ))
                                {
                                    <tr>
                                        <td>
                                            <script type="text/javascript">
                                                document.getElementById("showdata1").style.display = "none";
                                                document.getElementById("showMessage1").style.display = "block";
                                            </script>
                                        </td>
                                    </tr>
                                }
                                else{
                                    int count = 1;

                                    foreach (var item in ViewData["CarSponsored"] as IEnumerable<Car>)
                                    {                   
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.ChairitiesExam.Examination.Name</td>
                                        <td>@item.ChairitiesExam.Charity.Name</td>
                                        <td>@item.NumberPlate</td>
                                        <td>@item.AvailableSlots/@item.TotalSlots</td>
                                        @if (item.IsApproved)
                                        {
                                            <td><span class="label label-success">Đã tài trợ</span></td>
                                            <td></td>
                                            
                                        }
                                        else if (!item.IsApproved)
                                        {
                                            <td><span class="label label-danger">Chưa xác nhận</span></td>
                                            <td>
                                                <a href="@Url.Action("EditCarNotCe", "Sponsor", new { carId = @item.CarID })" class="btn-u" title="Chỉnh sửa"><i class="icon-edit"></i></a>
                                                @Html.ActionLink("Hủy tài Trợ", "DenieCar", new { carId = @item.CarID }, new { onclick = "return showPopup('Bạn có chắc sẽ hủy tài trợ chiếc xe này?', this.href);" })
                                            </td>
                                        }
                                    </tr>
                                        ++count;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-info" })

</div>


