@model TSMT.Models.ChairitiesExam

@{
    ViewBag.Title = "Thông tin của tổ chức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Charity")">Hội từ thiện</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}

@Html.Partial("_CharitySidebarPartial")

<div class="col-md-9">
    <div class="panel panel-orange margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Thông tin về tổ chức @Model.Charity.Name , kì thi @Model.Examination.Name
                <a href="@Url.Action("EditCharityExam", "Charity", new { ceId = Model.CharityExamID })" class="btn-u btn-u-green"><i class="icon-edit"></i>Chỉnh Sửa</a>
            </h3>

        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <td>Đợt thi</td>
                    <td>@Model.Examination.Name</td>
                </tr>
                <tr>
                    <td>Tổng số chỗ trọ</td>
                    <td>@Model.TotalSlotsLodges</td>
                </tr>
                <tr>
                    <td>Số chỗ trọ còn trống</td>
                    <td>@Model.AvailableSlotsLodges</td>
                </tr>
                <tr>
                    <td>Tổng số chỗ ngồi trên xe</td>
                    <td>@Model.TotalSlotsVehicles</td>
                </tr>
                <tr>
                    <td>Số chỗ ngồi còn trống</td>
                    <td>@Model.AvailableSlotsVehicles</td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="row servive-block margin-bottom-10">
            <a href="@Url.Action("ManageVolunteer", "Charity", new { ceId = @Model.CharityExamID })">
                <div class="col-md-4 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-green">
                        <h4>Quản lý
                        <br />
                            Tình nguyện viên</h4>
                        <div><i class="icon-group"></i></div>
                        <p>HDSD</p>
                    </div>
                </div>
            </a>
            <a href="@Url.Action("ManageCandidate", "Charity", new { id = @Model.CharityExamID })">
                <div class="col-md-3 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-sea">
                        <h4>Quản lý
                        <br />
                            Thí sinh</h4>
                        <div><i class="icon-group"></i></div>
                        <p>HDSD</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="row servive-block margin-bottom-10">
            <a href="@Url.Action("ManageLodge", "Charity", new { ceId = @Model.CharityExamID })">
                <div class="col-md-3 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-grey">
                        <h4>Quản lý
                        <br />
                            Chỗ trọ</h4>
                        <div><i class="icon-building"></i></div>
                        <p>HDSD</p>
                    </div>

                </div>
            </a>

            <a href="@Url.Action("ManageCar", "Charity", new { ceId = @Model.CharityExamID })">
                <div class="col-md-3 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-blue">
                        <h4>Quản lý
                        <br />
                            Xe</h4>
                        <div><i class="icon-key"></i></div>
                        <p>HDSD</p>
                    </div>

                </div>
            </a>

            <a href="@Url.Action("ManageFunds", "Charity", new { ceId = @Model.CharityExamID })">
                <div class="col-md-4 col-sm-6">
                    <div class="servive-block-in">
                        <h4>Quản lý
                        <br />
                            Tiền được tài trợ</h4>
                        <div><i class="icon-usd"></i></div>
                        <p>HDSD</p>
                    </div>
                </div>
            </a>
        </div>
        <button type="button" onclick="location.href ='/Charity/ManageCharityExam/'" class="btn-u btn-u-sea"><i class="icon-chevron-sign-left"></i>&nbsp;Quay lại</button>
    </div>
</div>
