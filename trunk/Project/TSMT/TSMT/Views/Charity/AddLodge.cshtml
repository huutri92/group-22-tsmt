@using TSMT.Models
@model TSMT.Models.Charity
@{
    ViewBag.Title = "Thêm nhà trọ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<link href="/Content/css/TSMTPlaces.css" rel="stylesheet">
<link href="/Content/css/TSMTPopup.css" rel="stylesheet">
<script src="/Content/js/jquery.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry,places&sensor=false"></script>
<script src="/Content/js/TSMTPlaces.js"></script>
<script src="/Content/js/TSMTPopup.js"></script>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-10">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Charity")">Hội từ thiện</a></li>
                <li><a href="@Url.Action("ManageLodgeCharity", "Charity")">Quản lý chỗ trọ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}


@using (Html.BeginForm("AddLodge", "Charity", FormMethod.Post, new { id = "FormAddLodge" }))
{
    <input type="hidden" name="ceId" value="@Model.CharityID"/>
    <input type="hidden" id="Longitude" name="Longitude" />
    <input type="hidden" id="Latitude" name="Latitude" />
    <div id="map_container" style="width: 100%; height: 500px;">
        <div id="searchBox" style="margin: 10px 10px">
            <input type="text" id="Address" name="Address" onfocus="activeFuck()" onblur="deactiveFuck()" />
            <input type="button" value="Đi đến" onclick="goThere()" />
        </div>
        <div id="map_canvas" style="width: 100%; height: 100%;"></div>
    </div>
    <input type="submit" value="Tạo" class="btn btn-info" onclick="return PrepareDataToSubmit()" />
    <input type="reset" value="Làm lại" class="btn btn-info" />
    @Html.ActionLink("Hủy", "ManageLodgeCharity", new { id = @Model.CharityID }, new { @class = "btn btn-info" })
}

