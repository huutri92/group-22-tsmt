@model TSMT.Models.ChairitiesExam
@{
    ViewBag.Title = "AddCharityExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2 class="title_of_page">Add Car</h2>
@using (Html.BeginForm("AddCar", "Charity", FormMethod.Post))
{
    <input type="hidden" name="ceId" value="@Model.CharityExamID"/>
    <table>
        <tr>
            <td>Biển số xe</td>
            <td>
                <input type="text" name="NumberPlate" /></td>
        </tr>
        <tr>
            <td>Tổng số chỗ ngồi</td>
            <td>
                <input type="text" name="TotalSlots" /></td>
        </tr>
         <tr>
            <td>Tên tài xế</td>
            <td>
                <input type="text" name="DriverName" /></td>
        </tr>
         <tr>
            <td>Số điện thoại tài xế</td>
            <td>
                <input type="text" name="DriverPhone" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Create" class="btn btn-info" />
                <input type="reset" value="Reset" class="btn btn-info" />
            </td>
        </tr>
    </table>
}
