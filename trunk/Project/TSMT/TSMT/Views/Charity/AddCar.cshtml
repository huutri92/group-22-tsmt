    function CheckNumberPlate(id, msg, required) {
        var e = document.getElementById(id);
        //var value = e.replaceAdjacentText(" ","");
        if (checkEmpty(e)) {
            var isNotExisted = false;
            $.ajax({
                url: '/Charity/CheckNumberPlate/',
                data: { code: e.value},
                type: 'POST',
                async: false,
                success: function (results) {
                    if (results.success == true) {
                        isNotExisted = results.isNotExisted;
                    }
                }
            });
