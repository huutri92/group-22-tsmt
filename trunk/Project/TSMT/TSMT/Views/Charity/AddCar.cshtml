@using (Html.BeginForm("AddCar", "Charity", FormMethod.Post, new { id = "FormAddCar" }))
{
    <div class="col-md-6">
        <div class="panel panel-orange margin-bottom-20">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="icon-list"></i>&nbsp;Tạo mới thông tin xe
                </h3>
            </div>
            <div class="panel-body">
                <input type="hidden" name="id" value="@Model.CharityID"/>
                <table class="table">
                    <tr>
                        <td style="vertical-align: middle">Biển số xe<span class="required">*</span></td>
                        <td>
                            <input type="text" name="NumberPlate" id="NumberPlate" class="form-control" style="width:60%" /></td>
                        
                    </tr>
                    <tr>
                        <td style="vertical-align: middle">Tổng số chỗ ngồi<span class="required">*</span></td>
                        <td>
                            <input type="text" name="TotalSlots" id="TotalSlots" class="form-control" style="width:25%"/></td>
                        
                    </tr>
                    <tr>
                        <td style="vertical-align: middle">Tên tài xế</td>
                        <td>
                            <input type="text" name="DriverName" id="DriverName" class="form-control" style="width:85%"/></td>
                       
                    </tr>
                    <tr>
                        <td style="vertical-align: middle">Số điện thoại tài xế</td>
                        <td>
                            <input type="text" name="DriverPhone" id="DriverPhone" class="form-control" style="width:60%"/></td>
                        
                    </tr>
                    <tr>
                        <td style="vertical-align: middle">Kì thi</td>
                        <td>
                            <select name="CharityExamID" class="form-control" style="width:auto">
                                <option value="0" selected>---</option>
                                @foreach (var item in ViewData["CharityExam"] as IEnumerable<ChairitiesExam>)
                                {
                                    <option value="@item.CharityExamID" >@item.Examination.Name</option>
                                }
                            </select>
                        </td>
                        @*<td><span class="validationMsg" id="valMsgDriverPhone"></span></td>*@
                    </tr>

                </table>
            </div>
        </div>
        <div style="float: right">
            @*<input type="reset" value="Làm lại" class="btn btn-info" />*@
            <button type="reset" class="btn-u btn-u-purple"><i class="icon-eraser"></i>&nbsp;Làm lại</button>
            <button type="submit" class="btn-u btn-u-sea"><i class="icon-plus">&nbsp;Tạo</i></button>
            <button type="button" class="btn-u btn-u-red" onclick="location.href ='/Charity/ManageCarCharity/'"><i class="icon-remove-circle"></i>&nbsp;Hủy</button>
            @*<input type="submit" value="Tạo" class="btn btn-info" />*@
        </div>
        @*<button type="button" onclick="location.href ='/Charity/ManageCarCharity/'" class="btn-u btn-u-sea" ><i class="icon-chevron-sign-left"></i>&nbsp;Quay lại</button>*@
    </div>
}
   
