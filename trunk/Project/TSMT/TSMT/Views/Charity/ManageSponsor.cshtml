@using TSMT.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title_of_page">Manage Sponsors of Charity Exam</h2>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>STT</th>
                <th>Sponsor's name</th>
                <th>Type</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;

                foreach (var item in ViewData["funds"] as IEnumerable<Fund>)
                {
                <tr>
                    <td>@counter</td>
                    <td>@item.Sponsor.Account.Profile.Lastname @item.Sponsor.Account.Profile.Firstname</td>
                    <td>Fund</td>
                    <td>@item.FundSponsored - IsOnlineFunding: @item.IsOnlineFunding</td>
                    <td>
                      @*  @Html.ActionLink("Details", "DetailsFunding", new { fundId = @item.FundID})*@
                    </td>
                </tr>
                    ++counter;
                }
                
                foreach (var item in ViewData["lodges"] as IEnumerable<Lodge>)
                {
                <tr>
                    <td>@counter</td>
                    <td>@item.Sponsor.Account.Profile.Lastname @item.Sponsor.Account.Profile.Firstname</td>
                    <td>Lodge</td>
                    *<td>
                         @*@item.Address, @item.District.Name - @item.TotalSlots@Html.Raw("(")@item.AvailableSlots)*@
                     </td>
                    <td>
                        @Html.ActionLink("Details", "DetailsLodge", new { lodgeId = @item.LodgeID})
                    </td>
                </tr>
                    ++counter;
                }
                
                foreach (var item in ViewData["cars"] as IEnumerable<Car>)
                {
                <tr>
                    <td>@counter</td>
                    <td>@item.Sponsor.Account.Profile.Lastname @item.Sponsor.Account.Profile.Firstname</td>
                    <td>Car</td>
                    <td>@item.NumberPlate - @item.TotalSlots@Html.Raw("(")@item.AvailableSlots)</td>
                    <td>
                        @Html.ActionLink("Details", "DetailsCar", new { carId = @item.CarID})
                    </td>
                </tr>
                    ++counter;
                }
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Back to Manage CE", "DetailsCharityExam", new { ceId = @ViewData["ceId"] }, new { @class = "btn btn-info" })
