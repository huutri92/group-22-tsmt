@using TSMT.Models
@model TSMT.Models.ChairitiesExam

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title_of_page">Manage Lodges of Charity Exam</h2>

<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>STT</th>
                <th>Address</th>
                <th>Sponsor</th>
                <th>Tổng số phòng</th>
                <th>Tổng số chỗ trọ</th>
                <th>Số chỗ còn trống</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;

                foreach (var item in ViewData["lodges"] as IEnumerable<Lodge>)
                {
                <tr>
                    <td>@counter</td>
                    <td>@item.Address</td>
                    <td>@if (@item.SponsorID != null)
                        {
                        @item.Sponsor.Account.Profile.Lastname @item.Sponsor.Account.Profile.Firstname
                        }
                    </td>
                    <td>@item.TotalRooms</td>
                    <td>@item.TotalSlots</td>
                    <td>@item.AvailableSlots</td>
                    <td>
                        @Html.ActionLink("Details", "DetailsLodge", new { lodgeId = @item.LodgeID })
                        @Html.ActionLink("Edit", "EditLodge", new { lodgeId = @item.LodgeID })
                        @Html.ActionLink("Delete", "DeleteLodge", new { lodgeId = @item.LodgeID })
                    </td>
                </tr>
                        ++counter;
                }
            }
        </tbody>
    </table>
</div>

@Html.ActionLink("Create", "AddLodge", new { ceId = Model.CharityExamID }, new { @class = "btn btn-info" })
@Html.ActionLink("Back to Manage CE", "ManageCharityExam", null, new { @class = "btn btn-info" })