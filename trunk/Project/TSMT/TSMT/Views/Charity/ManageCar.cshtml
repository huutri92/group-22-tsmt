@using TSMT.Models
@model TSMT.Models.ChairitiesExam

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title_of_page">Manage Cars of Charity Exam</h2>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>STT</th>
                <th>Sponsor</th>
                <th>Biển số xe</th>
                <th>Tổng số chỗ</th>
                <th>Số chỗ còn trống</th>
                <th>Tên tài xế</th>
                <th>SĐT tài xế</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;

                foreach (var item in ViewData["Cars"] as IEnumerable<Car>)
                {
                <tr>
                    <td>@counter</td>
                    <td>
                        @if (item.SponsorID != null)
                        {
                            @item.Sponsor.Account.Profile.Lastname @item.Sponsor.Account.Profile.Firstname
                        }
                    </td>
                    <td>@item.NumberPlate</td>
                    <td>@item.TotalSlots</td>
                    <td>@item.AvailableSlots</td>
                    <td>@item.DriverName</td>
                    <td>@item.DriverPhone</td>
                    <td>
                        @Html.ActionLink("Details", "DetailsCar", new { carId = @item.CarID })
                        @Html.ActionLink("Edit", "EditCar", new { carId = @item.CarID })
                        @Html.ActionLink("Delete", "DeleteCar", new { carId = @item.CarID })
                    </td>
                </tr>
                    ++counter;
                }
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Create", "AddCar", new { ceId = Model.CharityExamID }, new { @class = "btn btn-info" })
@Html.ActionLink("Back to Charity Exam", "ManageCharityExam", null, new { @class = "btn btn-info" })
