<script type="text/javascript">

    // perform JavaScript after the document is scriptable.

    function callAjaxApprove(carId) {
        $.ajax({
            url: '/Charity/ApproveCar/' + carId,
            type: 'GET',
            success: function (results) {
                var tr = document.getElementById(carId);
                var lastTd = tr.lastElementChild;
                var preLastTd = lastTd.previousElementSibling;

                lastTd.removeChild(lastTd.lastElementChild);
                lastTd.removeChild(lastTd.lastElementChild);

                lastTd.lastElementChild.style.display = "inline";

                var spanStatus = preLastTd.lastElementChild;
                spanStatus.textContent = "Đã duyệt";
                spanStatus.className = "label label-success";
            }
        });
        return false;
    }

    function callAjaxDelete(carId) {


        $.ajax({
            url: '/Charity/DeleteCar/' + carId,
            type: 'GET',
            success: function (results) {
                $("#" + carId).hide(800, function () {
                    $("#" + carId).remove();
                });

            }
        });
        return false;
    }

    function callAjaxDenie(carId) {


        $.ajax({
            url: '/Charity/DenieCar/' + carId,
            type: 'GET',
            success: function (results) {
                $("#" + carId).hide(800, function () {
                    $("#" + carId).remove();
                });
            }
        });
        return false;
    }

    function callAjaxRemove(carId) {


        $.ajax({
            url: '/Charity/RemoveCar/' + carId,
            type: 'GET',
            success: function (results) {
                $("#" + carId).hide(800, function () {
                    $("#" + carId).remove();
                });
            }
        });
        return false;
    }

    function callAjaxRemoveOutCe(carId) {
        $.ajax({
            url: '/Charity/RemoveCarOutOfCe/' + carId,
            type: 'GET',
            success: function (results) {
                $("#" + carId).hide(800, function () {
                    $("#" + carId).remove();
                });
            }
        });
        return false;
    }
</script>
