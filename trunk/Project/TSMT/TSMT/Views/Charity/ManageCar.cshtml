@model TSMT.Models.ChairitiesExam

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Active = "ManageCar";
    ViewBag.Title = "Quản lý xe";
       
}


<script>
    $(document).ready(function () {
        $('.popup-confirm').addClass("popup-remove");
    });

</script>

