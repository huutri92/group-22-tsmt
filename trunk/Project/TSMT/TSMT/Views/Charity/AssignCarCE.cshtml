@using TSMT.Models
@model TSMT.Models.Car

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sắp xếp xe phục vụ đợt thi";
}

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Charity")">Hội từ thiện</a></li>
                <li><a href="@Url.Action("ManageCarCharity", "Charity")">Quản lý xe</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_CharitySidebarPartial")

@using (Html.BeginForm("AssignCarCE", "Charity", FormMethod.Post, new { onsubmit = "return checkDate();" }))
{
    <div class="col-md-4">
        <div class="panel panel-orange margin-bottom-20">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i>&nbsp;Sử dụng xe cho đợt thi</h3>
            </div>
            <div class="panel-body">
                <input type="hidden" name="carId" value="@Model.CarID"/>
                <table class="table">
                    <tr>
                        <td style="vertical-align: middle">Đợt thi</td>
                        <td>
                            <select name="CharityExamID" id="exam" onchange="synChange();" class="form-control" style="width:auto">
                                <option value="0" selected>---</option>
                                @foreach (var item in ViewData["CharityExam"] as IEnumerable<ChairitiesExam>)
                                {
                                    if (Model.CharityExamID == item.CharityExamID)
                                    {
                                        <option value="@item.CharityExamID" selected>@item.Examination.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.CharityExamID">@item.Examination.Name</option> 
                                    }
                                }
                            </select>
                            <select id="date" name="exId" class="form-control" style="width: auto; display:none">
                                <option value="0" selected>---</option>
                                @foreach (var item in ViewData["CharityExam"] as IEnumerable<ChairitiesExam>)
                                {
                                    if (Model.CharityExamID == item.CharityExamID)
                                    {
                                        <option value="@item.CharityExamID" selected>@item.Examination.BeginDate</option>
                                    }
                                    else
                                    {
                                        <option value="@item.CharityExamID">@item.Examination.BeginDate</option> 
                                    }
                                }
                            </select>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div style="float: right">
            @*<button type="reset" class="btn-u btn-u-purple"><i class="fa fa-eraser"></i>&nbsp;Làm lại</button>*@
            <button type="submit" class="btn-u btn-u-sea"><i class="fa fa-car">&nbsp;Sử dụng</i></button>
            <button type="button" class="btn-u btn-u-red"  onclick="location.href ='/Charity/ManageCarCharity/'" ><i class="fa fa-times-circle"></i>&nbsp;Hủy</button>
        </div>
        @*<button type="button" onclick="location.href ='/Charity/ManageCarCharity/'" class="btn-u btn-u-sea"><i class="fa fa-chevron-circle-left"></i>&nbsp;Quay lại</button>*@
    </div>
    <script type="text/javascript">
        function synChange() {
            if (document.getElementById("exam").selectedIndex == 0) {
                document.getElementById("date").selectedIndex = 0;
            } else {
                document.getElementById("date").selectedIndex = document.getElementById("exam").selectedIndex;
            }
        }
        function checkDate() {
            var examDate = new Date(document.getElementById("date")[document.getElementById("date").selectedIndex].textContent);
            var now = new Date;
            if ((examDate - now) / 86400000 >= 1) {
                return true;
            } else {
                alert("Đã hoàn tất đăng ký cho đợt thi này, bạn không thể xếp xe được nữa");
                return false;
            }
        }
    </script>
}