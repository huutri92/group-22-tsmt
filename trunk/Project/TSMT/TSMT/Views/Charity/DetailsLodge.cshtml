<div class="service-one">
    <div class="service-one-inner">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="s-one-item sitem-one">
                        <i class="fa fa-gear"></i>
                        <div class="s-one-caption">
                            <h4>@Html.ActionLink("Manage Room", "ManageRoom", new { lodgeId = @Model.LodgeID })</h4>
                            <p>Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên phòng</th>
                <th>Tổng số chỗ</th>
                <th>Số chỗ còn trống</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @{

                foreach (var item in ViewData["rooms"] as IEnumerable<Room>)
                {
                <tr id ="@item.RoomID">
                    <td>@item.RoomName</td>
                    <td>@item.TotalSlots</td>
                    <td>@item.AvailableSlots</td>
                    <td>
                        @Html.ActionLink("Details", "DetailsRoom", new { roomId = @item.RoomID })
                        @Html.ActionLink("Chỉnh sửa", "EditRoom", new { roomId = @item.RoomID })
                        @Html.ActionLink("Xóa", "DeleteRoom", new { id = @item.RoomID }, new { onclick = "return showPopup('Are you sure to delete it?', this.href," + @item.RoomID + ", 'del' );" })
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Tạo phòng", "AddRoom", new { lodgeId = Model.LodgeID }, new { @class = "btn btn-info" })
