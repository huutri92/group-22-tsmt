@using TSMT.Models
@model TSMT.Models.Lodge
@{
    ViewBag.Title = "Thông tin chi tiết nhà trọ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Charity")">Hội từ thiện</a></li>
                 <li><a href="@Url.Action("ManageLodgeCharity", "Charity")">Quản lý nhà trọ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}

@Html.Partial("_CharitySidebarPartial")
<script>
    $(document).ready(function () {
        $('.popup-confirm').addClass("popup-remove");
    });
</script>

<div class="col-md-9">
    <div class="panel panel-orange margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>Thông tin chi tiết nhà trọ và quản lý phòng
                <a href="@Url.Action("AddRoom", "Charity", new { id = Model.LodgeID })" class="btn-u btn-u-green"><i class="fa fa-plus"></i>Tạo phòng</a>
            </h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <td>Địa chỉ:</td>
                    <td>@Model.Address</td>
                </tr>
              @*  <tr>
                    <td>Sponsor:</td>
                    <td>@Model.SponsorID</td>
                </tr>*@
                <tr>
                    <td>Tổng số phòng:</td>
                    <td>@Model.Rooms.Count</td>
                </tr>
                <tr>
                    <td>Tổng số chỗ trọ</td>
                    <td>@Model.TotalSlots</td>
                </tr>
                <tr>
                    <td>Số chỗ còn trống</td>
                    <td>@Model.AvailableSlots</td>
                </tr>
            </table>
                <table class="table table-hover table-bordered ">
                    <thead>
                        <tr>
                            @*<th>STT</th>*@
                            <th>Tên phòng</th>
                            <th>Tổng số chỗ</th>
                            <th>Số chỗ còn trống</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in ViewData["rooms"] as IEnumerable<Room>)
                            {
                            <tr id ="@item.RoomID">
                                <td>@item.RoomName</td>
                                <td>@item.TotalSlots</td>
                                <td>@item.AvailableSlots</td>
                                <td>
                                    @*@Html.ActionLink("Details", "DetailsRoom", new { roomId = @item.RoomID })*@
                                    <a href="@Url.Action("EditRoom", "Charity", new { id = @item.RoomID })" class="btn-u btn-u-blue" title="Chỉnh sửa phòng">
                                        <i class="fa fa-pencil-square-o"></i>
                                    </a>
                                    <a href="@Url.Action("DeleteRoom", "Charity", new { id = @item.RoomID })" class="btn-u btn-u-red" title="Xóa phóng này">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
        </div>
    </div>
    <div style="float:right">
        <a href="@Url.Action("AssignLodgetoCe","Charity", new { id = @Model.LodgeID})" class="btn-u btn-u-brown"><i class="fa fa-building"></i>&nbsp;Sử dụng phòng</a> 
    </div>
    <a href="@Url.Action("ManageLodgeCharity", "Charity")" class="btn-u btn-u-default"><i class="fa fa-chevron-circle-left"></i>&nbsp;Quay lại</a>
</div>
