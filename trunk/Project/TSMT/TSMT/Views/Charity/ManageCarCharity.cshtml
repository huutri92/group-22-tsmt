@Html.Partial("_CharitySidebarPartial")


@*<h2 class="title_of_page">Manage Cars of Charity Exam</h2>
<div class="inner-page-content inner-careers">*@

<div class="col-md-9">
    <div class="panel panel-red margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Thông tin về xe
               @* <a href="@Url.Action("AddCar", "Charity", new { ceId = Model.CharityExamID })" class="btn-u btn-u-green"><i class="icon-pencil"></i>Tạo mới</a>*@
            </h3>

        </div>
        <div class="panel-body">
            <div class="tab-v1">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#home" data-toggle="tab">Xe của Hội từ thiện</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Biển số xe</th>
                                    <th>Kì thi</th>
                                    <th>Tên tổ chức</th>
                                    <th>Tổng số chỗ</th>
                                    <th>Số chỗ còn trống</th>
                                    @*<th>Tên tài xế</th>
                                    <th>SĐT tài xế</th>*@
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;

                                    foreach (var car in ViewData["carsOfCharity"] as IEnumerable<Car>)
                                    {                   
                                    <tr id ="@car.CarID">
                                        <td>@counter</td>
                                        <td>@car.NumberPlate</td>
                                        @if (car.CharityExamID == null)
                                        {
                                            <td>Chưa thiết lập</td>
                                            <td>Chưa thiết lập</td>
                                        }
                                        else
                                        {
                                            <td>@car.ChairitiesExam.Examination.Name</td>
                                            <td>@car.ChairitiesExam.CharityExamName</td>
                                        }
                                        <td>@car.TotalSlots</td>
                                        <td>@car.AvailableSlots</td>
                                        @* <td>@car.DriverName</td>
                                        <td>@car.DriverPhone</td>*@

                                        <td>
                                            @if (car.AvailableSlots < car.TotalSlots)
                                            {
                                    
                                                @Html.ActionLink("Show Routes", "DisplayRoute", new { id = @car.CarID })
                                            }
                                            @Html.ActionLink("Details", "DetailsCar", new { carId = @car.CarID })
                                            @if (car.SchedulesCars.FirstOrDefault() == null)
                                            {
                                                @Html.ActionLink("Edit", "EditCar", new { carId = @car.CarID })
                                                @Html.ActionLink("AssignCar", "AssignCarCE", new { id = @car.CarID })
                                            }
                                            @Html.ActionLink("Delete", "DeleteCar", new { id = @car.CarID }, new { onclick = "return showPopup('Are you sure to delete it?', this.href," + @car.CarID + ", 'del' );" })
                                        </td>


                                    </tr>
                                            ++counter;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.ActionLink("Thêm xe", "AddCar", new { id = Model.CharityID }, new { @class = "btn btn-info" })
@Html.ActionLink("Sử dụng xe", "AssignCarsToCe","", new { @class = "btn btn-info" })
