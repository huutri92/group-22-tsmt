@using TSMT.Models
@model IEnumerable<JoinsIn>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title_of_page">Manage Candidates of Charity Exam</h2>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>STT</th>
                <th>Candidate Name</th>
                <th>Lodge</th>
                <th>Room</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;

                foreach (var item in Model)
                {
                <tr>
                    <td>@counter</td>
                    <td>@item.Candidate.Account.Profile.Lastname @item.Candidate.Account.Profile.Firstname</td>
                    <td>
                        @if (item.RoomID != null)
                        {
                            @item.Room.Lodge.LodgeID
                        }
                    </td>
                    <td>
                        @if (item.RoomID != null)
                        {
                            @item.Room.RoomID
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Details", "DetailsCandidate", new { joininId = @item.JoinInID })
                        @Html.ActionLink("Remove", "RemoveCandidate", new { joininId = @item.JoinInID }, new { onclick="return showPopup('Please confirm to remove.', this.href);" })
                    </td>
                </tr>
                        ++counter;
                }
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Back to Manage CE", "DetailsCharityExam", new { ceId = @ViewData["ceId"] }, new { @class = "btn btn-info" })
