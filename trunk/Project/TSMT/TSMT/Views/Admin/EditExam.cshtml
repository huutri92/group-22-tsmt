@{
    ViewBag.Title = "EditExam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model TSMT.Models.ManageExamModel
<h2 class="title_of_page">Edit Exam</h2>
@using (Html.BeginForm("EditExamInfo", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.ExamId)
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="name" class="col-md-2 control-label">Tên kỳ thi</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Examination.Name)
                @*<input type="text" class="form-control" id="name" placeholder="Nhập tên kỳ thi">*@
            </div>
        </div>
        <div class="form-group">
            <label for="username" class="col-md-2 control-label">Ngày bắt đầu</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Examination.BeginDate, new { type = "date" })
                @*<input type="date" class="form-control" id="username">*@
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-md-2 control-label">Ngày kết thúc</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Examination.EndDate, new { type = "date" })
                @*<input type="date" class="form-control" id="email">*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-info"/>
                <input type="reset" value="Làm lại" class="btn btn-info"x/>
				<button class="btn btn-info" onclick="window.history.back(-1);">Back</button>
            </div>
        </div>
    </form>
}