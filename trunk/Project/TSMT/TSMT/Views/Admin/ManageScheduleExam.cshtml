@{
    ViewBag.Title = "Chi tiết lịch thi - " + @Model.Name;
    ViewBag.Active = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model Examination

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li><a href="@Url.Action("ManageExam", "Admin")">Quản lý kỳ thi</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}

@Html.Partial("_AdminSidebarPartial")
<div class="col-md-9">
    <div class="panel panel-red margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>Chi tiết lịch thi - @Model.Name</h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ngày</th>
                        <th>Giờ bắt đầu</th>
                        <th>Giờ kết thúc</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (ScheduleExam item in Model.ScheduleExams)
                        {
                        <tr>
                            <td>@item.Day.ToString("dd/MM/yyyy")</td>
                            <td>@item.BeginTime.ToString("HH:mm")</td>
                            <td>@item.EndTime.ToString("HH:mm")</td>
                            <td>
                                <a href="@Url.Action("EditScheduleExam","Admin",new { id = @item.ScheduleExamID })" class="btn-u btn-u-blue"><i class="fa fa-pencil-square-o"></i>&nbsp;Sửa</a>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>


        </div>
    </div>
    <a href="@Url.Action("ManageExam","Admin")" class="btn-u btn-u-sea"><i class=" fa fa-chevron-circle-left"></i> Quay lại</a>
</div>


