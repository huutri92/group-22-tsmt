@{
    ViewBag.Title = "Edit Examination-Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model TSMT.Models.DetailsScheduleExam

<h2 class="title_of_page">@ViewBag.Title</h2>

@using (Html.BeginForm("EditScheduleExam", "Admin", FormMethod.Post))
{
    <input type="hidden" name="scheduleExamId" value="@Model.DetailsScheduleExamID"/>
    <div class="inner-page-content inner-careers">
        <table class="table table-hover table-bordered ">
            <tr>
                <td>Giờ bắt đầu</td>
                <td>
                    <input type="text" name="BeginHour" value="@Model.BeginHour"/></td>
            </tr>
            <tr>
                <td>Giờ kết thúc</td>
                <td>
                    <input type="text" name="EndHour" value="@Model.EndHour"/></td>
            </tr>
        </table>
        <input type="submit" value="Submit" class="btn btn-info" />
        <input type="reset" value="Reset" class="btn btn-info" />
        <input type="button" value="Cancel" class="btn btn-info" onclick="location.href = '/admin/ManageScheduleExam/' + @Model.ExamID"/>
    </div>
}