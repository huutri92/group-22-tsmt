@{
    ViewBag.Title = "EditUniversity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model TSMT.Models.ManageUniersityModel
<h2>EditUniversity</h2>
<div id="breadcrumb">
    <a href="@Url.Action("Index", "Home")" title="Tới trang chủ" class="tip-bottom"><i class="icon-home"></i>Trang chủ</a>
    <a href="@Url.Action("ManagerExam", "Admin")" title="Tới quản lí người dùng" class="tip-bottom">Quản lí kỳ thi</a>
    <a href="@Url.Action("AddExam", "Admin")" class="current">Thêm kỳ thi mới</a>
    <a href="@Url.Action("ManageUniversity", "Admin")" class="current">Quản lý trường Đại học</a>
</div>
@using (Html.BeginForm("EditUniInfo", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.UniId)
    <div class="tab-pane fade in active" id="one">
        <form class="form-horizontal" role="form">

            <div class="form-group">
                <label for="name" class="col-md-2 control-label">Tên trường</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.University.Name, new { @class = "form-control" })
                    @*<input type="text" class="form-control" id="name" placeholder="Nhập tên kỳ thi">*@
                </div>
            </div>

            <div class="form-group">
                <label for="username" class="col-md-2 control-label">Mã trường</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.University.UniversityCode)
                    @*<input type="date" class="form-control" id="username">*@
                </div>
            </div>

            <div class="form-group">
                <label for="email" class="col-md-2 control-label">Địa chỉ</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.University.Address)
                    @*<input type="date" class="form-control" id="email">*@
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-md-2 control-label">Website</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.University.Website)
                    @*<input type="date" class="form-control" id="email">*@
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-md-2 control-label">Số điện thoại</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.University.Phone)
                    @*<input type="date" class="form-control" id="email">*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<button type="submit" class="btn btn-info">Tạo mới</button>*@
                    <input type="submit" value="Lưu lại" class="btn btn-info" style="width: 100px; font-weight: bold" />
                    <input type="reset" value="Làm lại" class="btn btn-primary" style="width: 100px; font-weight: bold" />
                </div>
            </div>
        </form>
    </div>
}