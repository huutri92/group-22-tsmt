@{
    ViewBag.Title = "Quản lý thông tin các trường ĐHCĐ";
    ViewBag.Active = "ManageUniversity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model IEnumerable<University>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_AdminSidebarPartial")

<div class="col-md-9">
    <div class="panel panel-red margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Tất cả thông tin về trường đại học hiện có trong TSMT
                <a href="@Url.Action("AddUniversity", "Admin")" class="btn-u btn-u-green"><i class="icon-pencil"></i>Tạo mới</a>
            </h3>

        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th style="vertical-align:middle">Tên trường</th>
                        <th style="vertical-align:middle">Mã trường</th>
                        <th style="vertical-align:middle">Địa chỉ</th>
                      @*  <th>Website</th>
                        <th>Số điện thoại</th>*@
                        <th style="vertical-align:middle">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                        foreach (var item in Model)
                        {
                        <tr>
                            <td  style="vertical-align:middle">@counter</td>
                            <td style="vertical-align:middle">@item.Name</td>
                            <td style="vertical-align:middle">@item.UniversityCode</td>
                            <td style="vertical-align:middle">@item.Address</td>
                          @*  <td>
                                <a href="@item.Website">@item.Website</a>
                            </td>
                            <td>@item.Phone</td>*@
                            <td>
                                   <a href="@Url.Action("EditUniversity", "Admin", new { id = @item.UniversityID })"  class="btn-u btn-u-blue"><i class="icon-edit"></i>&nbsp; Sửa </a>
                                @if (item.IsRemovable)
                                {
                                    <a href="@Url.Action("DeleteUniversity", "Admin", new { id = @item.UniversityID })" class="btn-u btn-u-orange" onclick="return showPopup('Bạn có muốn xóa tất cả thông tin về trường ĐHCĐ này không?', this.href);"><i class="icon-trash"></i>&nbsp;Xóa</a>
                                }
                            </td>
                        </tr>
                                ++counter;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a href="@Url.Action("Index", "Admin")" class="btn-u btn-u-default"><i class="icon-chevron-sign-left" onclick="history.go(-1);"></i>&nbsp;Quay lại </a>
</div>
