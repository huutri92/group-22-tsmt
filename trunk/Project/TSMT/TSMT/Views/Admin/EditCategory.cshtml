@model TSMT.Models.DataAccess

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="text-align: center">
    <h2>Chỉnh Sửa Thông Tin Danh Sách</h2>
</div><br />
@using (Html.BeginForm("EditCategoryInfo", "Admin", FormMethod.Post, new { @class = "form-horizontal", style = "margin-left: 15%; margin-right: 15%" }))
{
    
    @Html.HiddenFor(model => model.CategoryID)
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="email" class="col-md-2 control-label">Tên Dannh Mục: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { @style = "width: 70% !important" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-info" style="width: 100px; font-weight: bold" />
                <input type="reset" value="Làm lại" class="btn btn-primary" style="width: 100px; font-weight: bold" />
                <button type="button" class="btn btn-info" onclick="history.back(-1);return false;">Quay Lại</button>
            </div>
        </div>
    </form>
}