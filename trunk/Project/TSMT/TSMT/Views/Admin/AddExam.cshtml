@{
    ViewBag.Title = "AddExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li><a href="@Url.Action("ManageExam", "Admin")">Thông tin các đợt thi</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_AdminSidebarPartial")


<div class="col-md-9">
    <div class="panel panel-red margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Tạo kỳ thi
            </h3>
            <div class="devider"></div>

        </div>
        <div class="panel-body">

            @using (Html.BeginForm("AddExam", "Admin", FormMethod.Post))
            {
    
                <table class="table table-hover">
                    <tr>
                        <td>Tên kỳ thi</td>
                        <td>
                            <input type="text" name="Name" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>Ngày bắt đầu</td>
                        <td>
                            <input type="text" name="BeginDate" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>Ngày kết thúc</td>
                        <td>
                            <input type="text" name="EndDate" class="form-control" /></td>
                    </tr>
                </table>
                <input type="submit" value="Create" class="btn btn-info" />
                <input type="reset" value="Reset" class="btn btn-info" />
                <input type="button" value="Cancel" class="btn btn-info" onclick="location.href = '/admin/ManageExam'" />
            }

        </div>
    </div>
</div>
