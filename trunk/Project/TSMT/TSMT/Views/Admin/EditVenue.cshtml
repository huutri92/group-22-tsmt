@{
    ViewBag.Title = "Thay đổi thông tin địa điểm thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model TSMT.Models.Venue

<link href="~/Content/css/TSMTPlaces.css" rel="stylesheet">
<link href="~/Content/css/TSMTPopup.css" rel="stylesheet">
<script src="~/Content/js/jquery.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry,places&sensor=false"></script>
<script src="~/Content/js/TSMTPlaces.js"></script>
<script src="~s/Content/js/TSMTPopup.js"></script>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li><a href="@Url.Action("ManageUniversity", "Admin")">Thông tin các trường ĐHCĐ</a></li>
                <li><a href="@Url.Action("ManageVenue", "Admin", new { id = @Model.UniExamID })">Thông tin địa điểm thi</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}

@using (Html.BeginForm("EditVenue", "Admin", FormMethod.Post))
{
    <input type="hidden" name="veId" value="@Model.VenueID"/>
    <div class="col-md-12 margin-bottom-5">
        <div class="panel panel-red">
            <div class="panel-heading" id="scrollToMe">
                <h3 class="panel-title" ><i class="icon-list"></i>&nbsp;Thay đổi thông tin địa điểm thi
                </h3>
            </div>

            <table class="table table-hover">
                <tr style="text-align: center">
                    <td style="vertical-align: middle">Địa chỉ</td>
                    <td>
                        <input type="text" name="Address" id="Address" class="form-control" value="@Model.Address"/></td>
                    <td>
                        @*<input type="button" value="Đi đến địa điểm thi" class="btn-u btn-u-sea margin-bottom-5" onclick="goThere(true)" />*@
                        <a href="#" onclick="goThere(true)" class="btn-u btn-u-sea margin-bottom-5"><i class="icon-hand-right"></i>&nbsp;Đi đến địa điểm thi</a>

                    </td>
                </tr>
            </table>
            @* <input type="submit" value="Submit" class="btn btn-info" />
        <input type="reset" value="Reset" class="btn btn-info" />
        <input type="button" value="Cancel" class="btn btn-info" onclick="location.href = '/admin/ManageVenue/' @Model.UniversitiesExamination.UniExamID"/>*@
        </div>
    </div>
    <div class="col-md-12" id="showMap">
        <div class="row">
            <div class="col-md-3" style="width: 268px; height: auto">
                <div class="input-group margin-bottom-5">
                    <table class="table">
                        <tr>
                            <td id="guideMove" colspan="2" style="visibility: hidden; color: red">* Di chuyển marker để thay đổi vị trí</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <span id="guideSuggest" style="color: blue; visibility: hidden"># Danh sách địa chỉ gợi ý:</span></td>
                        </tr>
                        <tr>
                            <td>
                                <div id="suggest"></div>
                            </td>
                        </tr>
                    </table>
                    @*<input type="submit" value="Lưu" class="btn-u btn-u-sea" onclick="return PrepareDataToSubmit()" />*@
                    <button type="submit" class="btn-u btn-u-default" onclick="return PrepareDataToSubmit()"><i class="icon-plus"></i>&nbsp;Lưu</button>
                    <button type="reset" class="btn-u btn-u-purpose"><i class="icon-eraser"></i>&nbsp;Xóa hết</button>
                    @*<input type="reset" value="Làm lại" class="btn btn-info" />*@
                </div>
            </div>
            <div class="col-md-9" id="map_canvas" style="height: 500px; vertical-align: middle">
            </div>
        </div>
    </div>   
    <a href="@Url.Action("ManageVenue", "Admin", new { id = @Model.UniExamID })" class="btn-u btn-u-sea"><i class=" icon-chevron-sign-left"></i>&nbsp;Quay lại</a>
    
}

<script type="text/javascript">
    $(document).ready(function () {
        $('html').animate({ scrollTop: $("#scrollToMe").offset().top - 20 }, 'slow')
    });

    $(document).ready(function () {
        initialize(@Model.Latitude, @Model.Longitude);

        // submit
        $('.popup-confirm').click(function () {
            $("#Longitude").val(marker.getPosition().lng());
            $("#Latitude").val(marker.getPosition().lat());
            $("#FormAddVenue").submit();
        });

       
    });
</script>
