@{
    ViewBag.Title = "Tình nguyện viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Active = "VolunteerHome";
}

@using TSMT.Models;
@model TSMT.Models.Volunteer

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_VolunteerSidebarPartial")
<div class="col-md-9">
    @if (Model.ParticipantVolunteers.Count == 0)
    {
        <div id="showMessage" class="alert alert-danger fade in" style="height: auto">
            <strong>Bạn chưa đăng ký tham gia đợt thi nào!</strong> Hãy nhấn vào nút "Đăng ký" để tham gia!
        </div>
        <div class="row servive-block margin-bottom-10">
            <a href="@Url.Action("JoinIn", "Volunteer")">
                <div class="col-md-3 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-orange">
                        <h4>Đăng ký</h4>
                        <div><i class="icon-thumbs-up"></i></div>
                        <p>HDSD.</p>
                    </div>
                </div>
            </a>
        </div>
    }
    else
    {
        <h2>Bạn đang tham gia vào @Model.ParticipantVolunteers.Count đợt thi! 
            <a href="@Url.Action("JoinIn", "Volunteer")" class="btn-u btn-u-blue">Tham gia thêm!</a>
        </h2>

        foreach (ParticipantVolunteer item in Model.ParticipantVolunteers.OrderBy(r => r.ChairitiesExam.ExamID))
        {
        <div>
            <h3>@item.ChairitiesExam.Examination.Name</h3>
            @if (item.IsApproved)
            {
                <a href="@Url.Action("ViewDetails", "Volunteer", new { id = item.ParticipantVolunteerID })" class="btn-u btn-u-blue">Xem chi tiết</a>
            }
            else
            {
                <div class="panel panel-orange margin-bottom-20">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="icon-list"></i>
                            Đang chờ được xác nhận tham gia vào hội từ thiện <strong><span style="color: yellow">@item.ChairitiesExam.Charity.Name!</span></strong>
                            <a href="@Url.Action("LeaveCE", "Volunteer", new { id = item.ParticipantVolunteerID })" onclick=" return showPopup('Bạn có chắc chắn muốn huỷ', this.href) " class="btn-u btn-u-blue">Hủy đăng ký</a>
                        </h3>
                    </div>
                </div>
            }
        </div>
        }
    }
</div>
