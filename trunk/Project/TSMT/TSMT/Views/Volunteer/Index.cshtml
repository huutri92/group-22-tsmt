@model TSMT.Models.Volunteer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Tình nguyện viên";
    ViewBag.Active = "VolunteerHome";
}


@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_VolunteerSidebarPartial")
<div class="col-md-9">
    @if (Model.CharityExamID == null && Model.IsApproved==false)
    {
   
        <div id="showMessage" class="alert alert-danger fade in" style="height: auto">
            @*<button type="button" class="close" data-dismiss="alert">×</button>*@
            <strong>Bạn chưa đăng ký vào Hội từ thiện!</strong> Hãy click nút "Đăng ký" để tham gia vào Hội từ thiện.
        </div>

        <div class="row servive-block margin-bottom-10">

            <a href="@Url.Action("JoinIn", "Volunteer")">
                <div class="col-md-3 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-orange">
                        <h4>Đăng ký</h4>
                        <div><i class="icon-thumbs-up"></i></div>
                        <p>HDSD.</p>
                    </div>
                </div>
            </a>
        </div>       
    
    }
    else
    {
        <div class="panel panel-orange margin-bottom-20">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="icon-list"></i>
                    Bạn đã đăng ký vào Hội từ thiện
                    <b><span style="color: yellow">@Model.ChairitiesExam.Charity.Name!</span></b>
                    @if (Model.CharityExamID != null && Model.IsApproved == false)
                    {
                        <a href="@Url.Action("LeaveCE", "Volunteer")" onclick=" return showPopup('Please confirm to delete it.', this.href) " class="btn-u btn-u-blue">Hủy đăng ký</a>
                    }
                    
                </h3>
            </div>
        </div>


        <div class="row servive-block margin-bottom-10">
            <a href="@Url.Action("ViewSchedule", "Volunteer")">
                <div class="col-md-3 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-sea">
                        <h4>Xem lịch</h4>
                        <div><i class="icon-thumbs-up"></i></div>
                        <p>HDSD.</p>
                    </div>
                </div>
            </a>

            <a href="@Url.Action("ViewRoute", "Volunteer")">
                <div class="col-md-3 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-grey">
                        <h4>Xem đường đi</h4>
                        <div><i class="icon-thumbs-up"></i></div>
                        <p>HDSD.</p>
                    </div>
                </div>
            </a>
        </div>

    }
    
</div>
