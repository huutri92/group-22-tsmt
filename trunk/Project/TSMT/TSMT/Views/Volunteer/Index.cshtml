@{
    ViewBag.Title = "Tình nguyện viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Active = "VolunteerHome";
}

@using TSMT.Models;
@model TSMT.Models.Volunteer

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_VolunteerSidebarPartial")

<link rel="stylesheet" href="~/Content/css/TSMTPopup.css">
<script type="text/javascript" src="~/Content/js/TSMTPopup.js"></script>

<div class="col-md-9">
    @if (Model.ParticipantVolunteers.Count == 0)
    {
        <div id="showMessage" class="alert alert-danger fade in" style="height: auto">
            <strong>Bạn chưa đăng ký tham gia hỗ trợ đợt thi nào!</strong> Hãy nhấn vào nút "Đăng ký" để tham gia!
        </div>
        <div class="row servive-block margin-bottom-10">
            <a href="@Url.Action("JoinIn", "Volunteer")">
                <div class="col-md-4 col-sm-6">
                    <div class="servive-block-in servive-block-colored servive-block-orange">
                        <h4>Đăng ký <br />tham gia hỗ trợ</h4>
                        <div><i class="icon-thumbs-up"></i></div>
                        <p>HDSD.</p>
                    </div>
                </div>
            </a>
        </div>
    }
    else
    {
        <div class="inner-page-content inner-careers">
            <table class="table table-hover table-bordered ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Đợt thi</th>
                        <th>Tổ chức từ thiện</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
        int counter = 1;

        foreach (ParticipantVolunteer item in Model.ParticipantVolunteers.OrderBy(r => r.ChairitiesExam.ExamID))
        {
                        <tr>
                            <td>@counter</td>
                            <td>@item.ChairitiesExam.Examination.Name</td>
                            <td>@item.ChairitiesExam.Charity.Name</td>
                            <td>
                                @if (item.IsApproved)
                                {
                                    <text>Đã xác nhận</text>
                                }
                                else
                                {
                                    <text>Chưa xác nhận</text>
                                }
                            </td>
                            <td>
                                @if (item.IsApproved)
                                {
                                    <a href="@Url.Action("ViewDetails", "Volunteer", new { id = item.ParticipantVolunteerID })">Chi tiết</a>
                                    if (item.ExamPaperID == null)
                                    {
                                    <a href="@Url.Action("LeaveCE", "Volunteer", new { id = item.ParticipantVolunteerID })" onclick=" return showPopup('Bạn có chắc chắn muốn rời hội từ thiện không?', this.href)">Rời hội từ thiện</a>
                                    }
                                }
                                else
                                {
                                    <a href="@Url.Action("LeaveCE", "Volunteer", new { id = item.ParticipantVolunteerID })" onclick=" return showPopup('Bạn có chắc chắn muốn huỷ đăng kí không?', this.href)">Hủy đăng ký</a>
                                }
                            </td>
                        </tr>
                                ++counter;
        }
                    }
                </tbody>
            </table>
        </div>
        if (Model.ParticipantVolunteers.Count < 3)
        {
        <a href="@Url.Action("JoinIn", "Volunteer")" class="btn-u btn-u-blue">Tham gia thêm!</a>
        }
    }
</div>
