@{
    ViewBag.Title = "Thông tin chi tiết tham gia đợt thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model ParticipantVolunteer

<script src="/Content/js/TSMTViewOnMap.js"></script>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Volunteer")">Tình nguyện viên</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_VolunteerSidebarPartial")
<div class="col-md-9">
    <div class="headline">
        <h3>Thông tin chi tiết hỗ trợ @Model.ChairitiesExam.Examination.Name</h3>
    </div>
    <div class="panel panel-pink margin-bottom-20" style="width: 65%">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-calendar"></i>&nbsp;Lịch trình các ngày thi
            </h3>
        </div>
        <table class="table">
            <tr>
                <th>#</th>
                <th>Ngày thi</th>
                <th>Giờ bắt đầu</th>
                <th>Giờ kết thúc</th>
            </tr>
            @{
                int counter = 1;
                foreach (ScheduleExam se in Model.ChairitiesExam.Examination.ScheduleExams)
                {
                <tr>
                    <td>@counter</td>
                    <td>@se.Day.ToString("dd/MM/yyyy")</td>
                    <td>@se.BeginTime.AddHours(-1.5).ToShortTimeString()</td>
                    <td>@se.EndTime.AddHours(-1).ToShortTimeString()</td>
                </tr>            
                    ++counter;
                }
            }
        </table>
    </div>

    @if (Model.ExamPaperID != null)
    {
        <div class="panel panel-pink margin-bottom-20" style="width: 65%">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="icon-calendar"></i>&nbsp;Thông tin thí sinh đưa đón thí sinh
                </h3>
            </div>
            <table class="table">
                <tr>
                    <th style="vertical-align: middle">Thí sinh</th>
                    <td style="vertical-align: middle">@Model.ExaminationsPaper.Candidate.Account.Profile.Lastname @Model.ExaminationsPaper.Candidate.Account.Profile.Firstname</td>
                </tr>
                <tr>
                    <th style="vertical-align: middle">Số điện thoại</th>
                    <td style="vertical-align: middle">@Model.ExaminationsPaper.Candidate.Account.Profile.PhoneNumber</td>
                </tr>
                <tr>
                    <th style="vertical-align: middle">Địa điểm trọ</th>
                    <td style="vertical-align: middle"><a href="#" title="Hiển thị trên bản đồ" onclick="openWindowPopup('/Home/ViewPlaces/', @Model.ExamPaperID); return false;">@Model.ExaminationsPaper.Lodge.Address</a></td>
                </tr>
                <tr>
                    <th style="vertical-align: middle">Địa điểm thi</th>
                    <td style="vertical-align: middle"><a href="#" title="Hiển thị trên bản đồ" onclick="openWindowPopup('/Home/ViewPlaces/', @Model.ExamPaperID); return false;">@Model.ExaminationsPaper.Venue.Address</a></td>
                </tr>
                <tr>
                    <th style="vertical-align: middle">Xem đường đi</th>
                    <td><a href="@Url.Action("ViewRountes", "Volunteer", new {id = @Model.ParticipantVolunteerID})" class="btn-u btn-u-tomato"><i class="icon-location-arrow"></i>&nbsp;Xem đường đi</a></td>
                </tr>
            </table>
        </div>
    }
    else
    {
        <div class="panel panel-pink margin-bottom-20" style="width:65%">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="icon-calendar"></i>&nbsp;Chưa được sắp xếp lịch đưa đón thí sinh
                </h3>
            </div>
        </div>
    }
    <a href="@Url.Action("Index", "Volunteer")" class="btn-u btn-u-default"><i class="icon-chevron-sign-left"></i>&nbsp;Quay về</a>
</div>



