@using TSMT.Models
@model IEnumerable<TSMT.Models.ExaminationsPaper>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thông tin phiếu báo thi";
    ViewBag.Active = "ManageExamPaper";
}


@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-20">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Candidate")">Thí sinh</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_CandidateSidebarPartial")


<div class="col-md-9">
    <div class="panel panel-blue margin-bottom-5">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>Tất cả phiếu báo thi của bạn
                <a href="@Url.Action("AddExamPaper", "Candidate")" class="btn-u btn-u-sea"><i class="fa fa-plus"></i>Tạo mới</a>
            </h3>
            @*@Html.ActionLink("Tạo mới", "AddExamPaper", null, new { @class = "btn btn-info" })*@

        </div>
        <div class="panel-body">
            <div id="showMessage" class="alert alert-danger fade in" style="display: none">
                @*<button type="button" class="close" data-dismiss="alert">×</button>*@
                <strong>Bạn chưa có phiếu báo thi!</strong> Bạn hãy click vào nút "Tạo mới" để tạo một phiếu báo thi cho riêng mình.
            </div>

            <table class="table table-hover table-bordered" id="showdata">
                <thead>
                    @*<tr>  <span style="float:right"><b>Ghi chú:</b>&nbsp;Những phiếu dự thi đã vào nhóm sẽ không được xóa</span></tr>*@
                    <tr>
                        <th>STT</th>
                        <th>Trường</th>
                        <th>Kỳ thi</th>
                        <th>Địa điểm thi</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() < 1)
                    {
                        <tr>
                            <td>
                                <script type="text/javascript">
                                    document.getElementById("showdata").style.display = "none";
                                    document.getElementById("showMessage").style.display = "block";
                                </script>
                            </td>
                        </tr>
                    }
                    else
                    {
                        int counter = 1;

                        foreach (var item in Model)
                        {                          
                        <tr>
                            <td>@counter</td>
                            <td>@item.UniversitiesExamination.University.Name</td>
                            <td>@item.UniversitiesExamination.Examination.Name</td>
                            <td>@item.Venue.Address</td>
                            <td>
                                <a href="@Url.Action("DetailsExamPaper", "Candidate", new { id = @item.ExamPaperID })" class="btn-u btn-u-violet" title="Xem chi tiết"><i class="fa fa-eye"></i></a>

                                @if (item.GroupID == null)
                                {
                                    <a href="@Url.Action("DeleteExamPaper", "Candidate", new { id = @item.ExamPaperID })" class="btn-u btn-u-red" onclick="return showPopup('Please confirm to delete it.', this.href);" title="Xóa"><i class="fa fa-trash-o"></i></a>
                                }
                            </td>
                        </tr>
                                ++counter;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
