                    <td></td>
                    <td>#</td>
                    <td>Biển Số Xe</td>
                    <td>Tổng Số Chỗ</td>
                </tr>
                @{
                    int counter = 1;
                    foreach (var item in ViewData["Cars"] as IEnumerable<Car>)
                    {
