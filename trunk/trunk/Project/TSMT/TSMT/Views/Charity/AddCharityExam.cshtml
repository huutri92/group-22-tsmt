@{
    ViewBag.Title = "AddCharityExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@using TSMT.Models;

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Charity")">Hội từ thiện</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_CharitySidebarPartial")

<h2 class="title_of_page">Thêm tổ chức cho đợt thi</h2>
    @using (Html.BeginForm("AddCharityExam", "Charity", FormMethod.Post))
    {
        <table>
            <tr>
                <td>Kỳ thi</td>
                <td>
                    <select name="ExamId">
                        @foreach (var item in ViewData["exams"] as IEnumerable<Examination>)
                        {
                            <option value="@item.ExaminationID">@item.Name</option>
                        }
                    </select></td>
            </tr>
            <tr>
                <td>Charity-Exam's Name</td>
                <td><input type="text" name="CharityExamName" /></td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Tạo mới" class="btn btn-info" />
                    <input type="reset" value="Làm lại" class="btn btn-info" />
                    <button class="btn btn-info" onclick="window.history.back(-1);">Quay lại</button>
                </td>
            </tr>
        </table>
    }
