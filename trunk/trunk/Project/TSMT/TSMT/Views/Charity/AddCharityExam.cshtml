@{
    ViewBag.Title = "AddCharityExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddCharityExam</h2>
@model TSMT.Models.CharityExamModel
<div id="breadcrumb">
    <a href="@Url.Action("Index", "Home")" title="Tới trang chủ" class="tip-bottom"><i class="icon-home"></i>Trang chủ</a>
    <a href="@Url.Action("ManagerExam", "Admin")" class="tip-bottom">Quản lí kỳ thi</a>
    <a href="@Url.Action("Admin", "Admin")" class="current">Thêm kỳ thi mới</a>
    <a href="@Url.Action("ManageUniversity", "Admin")" class="current">Quản lý trường Đại học</a>
    <a href="@Url.Action("AddUniversity", "Admin")" class="current">Thêm trường Đại học</a>
</div>
<div class="container">

    @using (Html.BeginForm("AddNewCharityExam", "Charity", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="inner-tab">
            <!-- Nab Bar Tan Menu list -->
            <ul id="mytab" class="nav nav-tabs">
                <li class="active"><a href="#one" data-toggle="tab">Tạo mới tài nguyên kỳ thi</a></li>
            </ul>
            <!-- Content for each menu item -->
            <div class="tab-content">
                <!-- First Content for Nav bar -->
                <div class="tab-pane fade in active" id="one">
                    <form class="form-horizontal" role="form">

                        <div class="form-group">
                            <label for="name" class="col-md-2 control-label">Mã kỳ thi</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.ExamId, new SelectList(Model.ListExamination,"ExaminationID","Name"))
                                @*<input type="text" class="form-control" id="name" placeholder="Nhập tên kỳ thi">*@
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="username" class="col-md-2 control-label">Mã nhà tài trợ</label>
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.CharityId, new SelectList(Model.ListCharities, "CharityID", "FullName"))
                                @*<input type="date" class="form-control" id="username">*@
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email" class="col-md-2 control-label">Tổng căn trọ</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ChairitiesExam.TotalSlotsLodges)
                                @*<input type="date" class="form-control" id="email">*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-md-2 control-label">Số trọ trống</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ChairitiesExam.AvailableSlotsLodges)
                                @*<input type="date" class="form-control" id="email">*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-md-2 control-label">Tổng phương tiện</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ChairitiesExam.TotalSlotsVehicles)
                                @*<input type="date" class="form-control" id="email">*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="col-md-2 control-label">Số phương tiện trống</label>
                            <div class="col-md-10">
                                <div>@Html.EditorFor(model => model.ChairitiesExam.AvailableSlotsVehicles)
                                    @*<input type="date" class="form-control" id="email">*@
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @*<button type="submit" class="btn btn-info">Tạo mới</button>*@
                                    <input type="submit" value="Tạo mới" class="btn btn-info" style="width: 100px; font-weight: bold" />
                                    <input type="reset" value="Làm lại" class="btn btn-primary" style="width: 100px; font-weight: bold" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
