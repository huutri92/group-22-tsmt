    function callAjaxDelete(roomId) {


        $.ajax({
            url: 'DeleteRoom/' + roomId,
            type: 'GET',
            success: function (results) {
                $("#" + roomId).hide(800, function () {
                    $("#" + roomId).remove();
                });

            }
        });
    }

</script>