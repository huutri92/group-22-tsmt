@using TSMT.Models
@model TSMT.Models.Lodge

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('.popup-confirm').addClass("popup-remove");
    });
</script>

<h2 class="title_of_page">Manage Lodges of Charity Exam</h2>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tổng số chỗ</th>
                <th>Số chỗ còn trống</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;

                foreach (var item in ViewData["rooms"] as IEnumerable<Room>)
                {
                <tr id ="@item.RoomID">
                    <td>@counter</td>
                    <td>@item.TotalSlots</td>
                    <td>@item.AvailableSlots</td>
                    <td>
                        @*@Html.ActionLink("Details", "DetailsRoom", new { roomId = @item.RoomID })*@
                        @Html.ActionLink("Edit", "EditRoom", new { roomId = @item.RoomID })
                        @Html.ActionLink("Delete", "DeleteRoom", new { id = @item.RoomID }, new { onclick="return showPopup('Are you sure to delete it?', this.href," + @item.RoomID + ", 'del' );" })
                    </td>
                </tr>
                    ++counter;
                }
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Create", "AddRoom", new { lodgeId = Model.LodgeID }, new { @class = "btn btn-info" })
