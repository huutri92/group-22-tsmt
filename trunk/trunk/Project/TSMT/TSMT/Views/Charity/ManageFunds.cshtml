@using TSMT.Models
@model TSMT.Models.ChairitiesExam

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title_of_page">Manage Funds of Charity Exam</h2>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            
            Tổng số tiền được tài trợ : @ViewData["totalfunds"] VND
            <tr>
                <th>STT</th>
                <th>Sponsor</th>
                <th>Số tiền được tài trợ</th>
                <th>Phương thức tài trợ</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;

                foreach (var item in ViewData["Funds"] as IEnumerable<Fund>)
                {
                <tr>
                    <td>@counter</td>
                    <td>
                        @if (item.SponsorID != null)
                        {
                            @item.Sponsor.Account.Profile.Lastname @item.Sponsor.Account.Profile.Firstname
                        }
                    </td>
                    <td>@item.FundSponsored.ToString("##,###") VND</td>
                    
                        @if (item.IsOnlineFunding)
                        {
                            <td>Chuyển giao qua internet</td>
                        }
                        else
                        {
                            <td>Chuyển giao tận tay</td>
                        }

                </tr>
                    ++counter;
                }
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Back to Manage CE", "DetailsCharityExam", new { ceId = @ViewData["ceId"] }, new { @class = "btn btn-info" })