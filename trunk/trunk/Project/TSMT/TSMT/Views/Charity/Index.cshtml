
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@{
    ViewBag.Title = "Hội từ thiện";
    ViewBag.Active = "CharityHome";
   
}

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_CharitySidebarPartial")
<div class="col-md-9">
    <div class="row servive-block margin-bottom-10">
        @*<div class="headline">
            <h2>Các chức năng</h2>
        </div>*@
        <a href="@Url.Action("ManageCharityExam", "Charity")">
            <div class="col-md-4 col-sm-6">
                <div class="servive-block-in servive-block-colored servive-block-sea">
                    <h4>Quản lý <br /> thông tin kỳ thi</h4>
                    <div><i class="icon-calendar"></i></div>
                    <p>HDSD</p>
                </div>
            </div>
