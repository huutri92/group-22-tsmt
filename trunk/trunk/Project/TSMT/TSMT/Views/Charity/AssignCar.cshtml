@{
    ViewBag.Title = "Trang sắp xếp xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/css/TSMTPopup.css">
<script type="text/javascript" src="~/Content/js/TSMTPopup.js"></script>
<div style="float: right" id="TSMTSearching"></div>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>STT</th>
                <th onclick="sortBy('fname', this)" class="order orderDes orderHidden">Thí sinh</th>
                <th onclick="sortBy('lodge', this)" class="order orderDes orderHidden">Địa chỉ trọ</th>
                <th onclick="sortBy('venue', this)" class="order orderDes orderHidden">Địa chỉ thi</th>
                <th onclick="sortBy('status', this)" class="order orderDes orderHidden">Trạng thái</th>
                <th onclick="sortBy('note', this)" class="order orderDes orderHidden">Ghi chú</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody id="TSMTPaging"></tbody>
    </table>
</div>

<span id="HasCar" style="display: none">
    @Html.ActionLink("Xoá kết quả sắp xe hiện tại", null, null, new { @class = "btn btn-info", onclick = "return showPopup('Xác nhận xoá kết quả sắp xe:', '/Charity/ResetCars/" + @ViewData["ceId"] + "?ReAssign=false')" })
    @Html.ActionLink("Sắp lại", null, null, new { @class = "btn btn-info", onclick = "return showPopup('Sắp lại xe sẽ xoá kết quả sắp xe hiện tại.</br>Xác nhận xoá kết quả sắp xe:', '/Charity/ResetCars/" + @ViewData["ceId"] + "?ReAssign=true')" })
    @Html.ActionLink("Sắp tay", "ManualAssignToCar", null, new { @class="btn btn-info"});
</span>
<span id="NoCar" style="display: none">
    @Html.ActionLink("Sắp xe", "AssignToCar", new { id = @ViewData["ceId"] }, new { @class = "btn btn-info" })
</span>

@Html.ActionLink("Về trang quản lý thí sinh", "ManageCandidate", new { id = @ViewData["ceId"] }, new { @class = "btn btn-info" })
@Html.ActionLink("Về trang quản lý chung", "DetailsCharityExam", new { id = @ViewData["ceId"] }, new { @class = "btn btn-info" })

<link rel="stylesheet" href="~/Content/css/TSMTPaging.css">
<script type="text/javascript" src="~/Content/js/TSMTPaging.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        fetchData();
    });
    function fetchData() {
        $.ajax({
            url: '/Charity/GetDataAssignCar',
            data: { id: @ViewData["ceId"] },
            type: 'POST',
            success: function (results) {
                if (results.success == true) {
                    if (results.IsAssigned) $("#HasCar").css("display", ""); else $("#NoCar").css("display", "");
                    init(10, 7, results.data);
                }
            }
        });
    }
    function showData(index, record){
        var tmp = "<tr><td>" + index;
        tmp += "</td><td>" + record.lname + " " + record.fname;
        tmp += "</td><td>" + record.lodge;
        tmp += "</td><td>" + record.venue;
        tmp += "</td><td>" + record.status;
        tmp += "</td><td>" + record.note;
        tmp += "</td><td>" + record.actions;
        tmp += "</td></tr>";
        return tmp;
    }
    function matchSearch(i, text){
        var r = false;
        r = r || (TSMTPagingData[i].lname.toUpperCase().indexOf(text) > -1);
        r = r || (TSMTPagingData[i].fname.toUpperCase().indexOf(text) > -1);
        r = r || (TSMTPagingData[i].lodge.toUpperCase().indexOf(text) > -1);
        r = r || (TSMTPagingData[i].venue.toUpperCase().indexOf(text) > -1);
        r = r || (TSMTPagingData[i].status.toUpperCase().indexOf(text) > -1);
        r = r || (TSMTPagingData[i].note.toUpperCase().indexOf(text) > -1);
        return r;
    }
</script>