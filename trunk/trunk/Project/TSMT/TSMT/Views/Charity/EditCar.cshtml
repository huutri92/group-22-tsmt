            @*<input type="submit" value="Tạo" class="btn btn-info" />*@
        </div>
    </div>
    
}

<script type="text/javascript">
    $(document).ready(function () {
        //var ex = /^[^\-]$/;
        //var reNumberplate = /^\d\d\D\d-\d{4,5}$/;
        var reTotalSlots = /^(\d{1}|[1-5]\d{1})$/;
        var rePhone = /^(09|01)\d{8,9}$/;
       @* var email = @Html.Raw("/^([a-z0-9_\.-]+)@([\da-z\.-]+)\.([a-z\.]{2,6})$/");
        var werb =/^(https?:\/\/)?([\da-z\.-]+)\.([a-z\.]{2,6})([\/\w \.-]*)*\/?$/;*@
        $("#TotalSlots").blur(function () { checkRegex("TotalSlots", reTotalSlots, "Số chỗ ngồi không hợp lý- không vượt quá 59 chỗ", true) });
        $("#DriverPhone").blur(function () { checkRegex("DriverPhone", rePhone, "Số điện thoại bắt đầu bằng 09 hoặc 01 và đủ (10 đến 11) số", false) });
        $("#NumberPlate").blur(function () { CheckNumberPlate("NumberPlate", "Xe đã tồn tại trong hệ thống! Vui lòng kiểm tra lại.", true) });
        //$("#NumberPlate").blur(function () { checkRegex("NumberPlate",reNumberplate, "Biển số xe không đúng định dạng! VD: 54X5-12345", true) });
        $("#FormEditCar").submit(function (e) {
            var isValidated = true;
            isValidated = checkRegex("TotalSlots", reTotalSlots, "Số chỗ ngồi không hợp lý- không vượt quá 59 chỗ", true) && isValidated;
            isValidated = checkRegex("DriverPhone", rePhone, "Số điện thoại bắt đầu bằng 09 hoặc 01 và đủ (10 đến 11) số", false) && isValidated;
            //isValidated = CheckNumberPlate("NumberPlate", "Xe đã tồn tại trong hệ thống! Vui lòng kiểm tra lại.", true) && isValidated;
            isValidated = CheckNumberPlate("NumberPlate", "Xe đã tồn tại trong hệ thống! Vui lòng kiểm tra lại.", true) && isValidated;
            //isValidated = checkRegex("NumberPlate", reNumberplate, "Biển số xe không đúng định dạng! VD: 54X5-12345", true) && isValidated;
            if (isValidated) return true;
            e.preventDefault();
        });
    });

   

    function CheckNumberPlate(id, msg, required) {
        var e = document.getElementById(id);
        //var value = e.replaceAdjacentText(" ","");
        if (checkEmpty(e)) {
            var isNotExisted = false;
            $.ajax({
                url: '/Charity/CheckNumberPlateEdit/',
                data: { code: e.value, oldCode: @Model.NumberPlate},
                type: 'POST',
                async: false,
                success: function (results) {
                    if (results.success == true) {
                        isNotExisted = results.isNotExisted;
                    }
                }
            });
            if (!isNotExisted) {
                createValMsg(e, msg);
                return false;
            } else
                removeValMsg(e);
                return true;
        } else return !required;
    }
</script>