@using TSMT.Models
@model TSMT.Models.Car
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thay đổi thông tin xe";
}

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Sponsor")">Hội từ thiện</a></li>
                <li><a href="@Url.Action("ManageCar", "Sponsor")">Quản Lý Xe</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}

@Html.Partial("_CharitySidebarPartial")
<h2 class="title_of_page">Chỉnh sửa xe</h2>
@using (Html.BeginForm("EditCar", "Charity", FormMethod.Post))
{
    <input type="hidden" name="carId" value="@Model.CarID"/>
    <table>
        <tr>
            <td>Biển số xe</td>
            <td>
                <input type="text" name="NumberPlate" value="@Model.NumberPlate"/></td>
        </tr>
        <tr>
            <td>Tổng số chỗ ngồi</td>
            <td>
                <input type="text" name="TotalSlots" value="@Model.TotalSlots"/></td>
        </tr>
         <tr>
            <td>Tên tài xế</td>
            <td>
                <input type="text" name="DriverName" value="@Model.DriverName"/></td>
        </tr>
        <tr>
            <td>Số điện thoại tài xế</td>
            <td>
                <input type="text" name="DriverPhone" value="@Model.DriverPhone"/></td>
        </tr>
        
        <tr>
            <td colspan="2">
                <input type="submit" value="Chỉnh sửa" class="btn btn-info" />
                <input type="reset" value="Làm lại" class="btn btn-info" />
            </td>
        </tr>
    </table>
}