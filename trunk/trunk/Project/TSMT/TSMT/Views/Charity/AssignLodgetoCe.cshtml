                    <td>Tổng Số Chỗ</td>
                </tr>
                @{
                    int counter = 1;

                    foreach (var item in ViewData["rooms"] as IEnumerable<Room>)
                    {
                           
                    <tr>
                        <td>
                            <input class="roomid"   type="checkbox" name ="charityexamid" value="@item.RoomID" />
