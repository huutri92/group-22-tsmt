@using TSMT.Models
@model TSMT.Models.Room
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Chỉnh sửa phòng";
}

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Charity")">Hội từ thiện</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_CharitySidebarPartial")

@using (Html.BeginForm("EditRoom", "Charity", FormMethod.Post))
{
    <div class="col-md-5">
        <div class="panel panel-orange margin-bottom-20">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list"></i>&nbsp;Chỉnh sửa phòng
                </h3>
            </div>
            <div class="panel-body">
                <input type="hidden" name="roomId" value="@Model.RoomID"/>
                <table>
                    <tr>
                        <td style="vertical-align: middle">Tổng số chỗ *</td>
                        <td>
                            <input type="text" name="TotalSlots" id="TotalSlots" class="form-control" /></td>
                        @*<td><span class="validationMsg" id="valMsgNumberPlate"></span></td>*@
                    </tr>


                </table>
            </div>
        </div>
        <div style="float: right">
            @*<input type="reset" value="Làm lại" class="btn btn-info" />*@
            @*<button type="submit" class="btn-u btn-u-default"><i class="fa fa-plus">&nbsp;Sửa</i></button>*@
            @*<button type="reset" class="btn-u btn-u-purpose"><i class="fa fa-eraser"></i>&nbsp;Làm lại</button>*@
            @*<input type="submit" value="Tạo" class="btn btn-info" />*@

            @*<button type="reset" class="btn-u btn-u-purple"><i class="fa fa-eraser"></i>&nbsp;Làm lại</button>*@
            <button type="submit" class="btn-u btn-u-sea"><i class="fa fa-save">&nbsp;Lưu thay đổi</i></button>
            <button type="button" class="btn-u btn-u-red" onclick="location.href ='/Charity/DetailsLodge/' + @Model.LodgeID"><i class="fa fa-times-circle"></i>&nbsp;Hủy</button>

        </div>
        @*<button type="button" onclick="location.href ='/Charity/DetailsLodge?lodgeId=' + @Model.LodgeID" class="btn-u btn-u-sea" ><i class="fa fa-chevron-circle-left"></i>&nbsp;Quay lại</button>*@
    </div>
}