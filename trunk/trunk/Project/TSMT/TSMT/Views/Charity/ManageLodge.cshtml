@using TSMT.Models
@model TSMT.Models.ChairitiesExam

@{
    ViewBag.Title = "Quản lý chỗ ở ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/js/TSMTPopup.js"></script>
<script src="~/Content/js/TSMTViewOnMap.js"></script>
<link rel="stylesheet" href="~/Content/css/TSMTPopup.css">
<script>
    $(document).ready(function () {
        $('.popup-confirm').addClass("popup-remove");
    });
</script>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title của @Model.Charity.Name</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Charity")">Hội từ thiện</a></li>
                <li><a href="@Url.Action("DetailsCharityExam", "Charity", new { id = @ViewData["ceId"] })">Đợt thi</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_CharitySidebarPartial")
<div class="col-md-9">
    <div class="panel panel-orange margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>Thông tin về nhà trọ kì thi @Model.Examination.Name
                <a href="@Url.Action("ChooseLodgeForCe", "Charity", new { id = Model.CharityExamID })" class="btn-u btn-u-green"><i class="fa fa-plus"></i>Chọn nhà cho đợt thi</a>

            </h3>
        </div>
        <div class="panel-body">
            <div class="tab-v1">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#home" data-toggle="tab">Chỗ trọ của Hội từ thiện</a></li>
                    <li><a href="#sponsored" data-toggle="tab">Chỗ trọ được tài trợ</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        @if (@Model.Lodges.Count == 0)
                        {
                            <p># Chưa có nhà trọ cho đợt thi này #</p> 
                        }
                        else {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Địa chỉ</th>
                                    <th>Tổng số phòng</th>
                                    <th>Tổng số chỗ trọ</th>
                                    <th>Số chỗ còn trống</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;

                                    foreach (var item in ViewData["lodgesOfCharity"] as IEnumerable<Lodge>)
                                    {
                                    <tr id="@item.LodgeID">
                                        <td style="vertical-align:middle">@counter</td>
                                        <td style="vertical-align:middle">@item.Address</td>
                                        <td style="vertical-align:middle">@item.Rooms.Count(r => r.CharityExamID != null)</td>
                                        <td style="vertical-align:middle">@item.TotalSlotsInUsed</td>
                                        <td style="vertical-align:middle">@item.AvailableSlots</td>
                                        <td style="vertical-align:middle">
                                            @*<button onclick="openWindowPopup('/charity/ViewLodge/', @item.LodgeID)">View on Map</button>*@
                                            @*<button class="btn-u btn-u-red" title="Xem trên bản đồ" onclick="openWindowPopup('/charity/ViewLodge/', @item.LodgeID)"><i class="fa fa-map-marker"></i></button>*@
                                              <a href="#"  onclick="openWindowPopup('/Home/ViewLodge/', @item.LodgeID)" class="btn-u btn-u-violetRed" title="Xem trên bản đồ" style="width:40px;height:30px"><i class="fa fa-map-marker"></i></a>
                                        <a href="#"  onclick="openWindowPopup('/charity/ViewLodge/', @item.LodgeID)" class="btn-u btn-u-green" title="Xem danh sách sinh viên" style="width:40px;height:30px"><i class="fa fa-group"></i></a>
                                            @*@Html.ActionLink("Details", "DetailLodgeCE", new { lodgeId = @item.LodgeID })*@
                                            <a href="@Url.Action("DetailLodgeCE", "Charity", new { id = @item.LodgeID })" class="btn-u btn-u-violet" title="Xem Chi Tiết"><i class="fa fa-eye"></i></a>
                                            @* @Html.ActionLink("Edit", "EditLodge", new { lodgeId = @item.LodgeID })*@
                                            @*@Html.ActionLink("Xóa", "RemoveLodgeOutCe", new { id = @item.LodgeID }, new { onclick = "return showPopup('Are you sure to delete it?', this.href," + @item.LodgeID + ", 'removeOutCe' );" })*@
                                            @if (item.AvailableSlots == item.TotalSlotsInUsed)
                                            {
                                                <a href="@Url.Action("RemoveLodgeOutCe", "Charity", new { id = @item.LodgeID })" class="btn-u btn-u-red" title="Xóa" onclick = "return showPopup('Bạn có chắc muốn xóa?', this.href, @item.LodgeID , 'removeOutCe' );"><i class="fa fa-trash-o"></i></a>
                                            }

                                        </td>

                                    </tr>
                                            ++counter;
                                    }
                                }
                            </tbody>
                        </table>
                        }

                    </div>
                    <div class="tab-pane" id="sponsored">
                        @if (@Model.Lodges.Count(l => l.Sponsor != null) <= 0)
                        {
                            <p># Chưa nhận được bất cứ tài trợ nào</p> 
                        }
                        else {
