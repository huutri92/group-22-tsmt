                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Địa chỉ</th>
                                    <th>Nhà tài trợ</th>
                                    <th>Tổng số phòng</th>
                                    <th>Tổng số chỗ trọ</th>
                                    <th>Số chỗ còn trống</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 1;

                                    foreach (var lodge in ViewData["lodgesSponsor"] as IEnumerable<Lodge>)
                                    {
                                    <tr id="@lodge.LodgeID">
                                        <td style="vertical-align:middle">@count</td>
                                        <td style="vertical-align:middle">@lodge.Address</td>
                                        <td style="vertical-align:middle">@if (@lodge.SponsorID != null)
                                            {
                                            @lodge.Sponsor.Account.Profile.Lastname @lodge.Sponsor.Account.Profile.Firstname
                                            }
                                        </td>
                                        <td style="vertical-align:middle">@lodge.Rooms.Count(r => r.CharityExamID == Model.CharityExamID)</td>
                                        <td style="vertical-align:middle">@lodge.TotalSlotsInUsed</td>
                                        <td style="vertical-align:middle">@lodge.AvailableSlots</td>
                                        @if (lodge.IsApproved && lodge.SponsorID != null)
                                        {
                                            <td style="vertical-align:middle"><span class="label label-success">Đã duyệt</span></td>
                                            <td style="vertical-align:middle">
                                                @*@Html.ActionLink("Edit", "EditLodge", new { lodgeId = @item.LodgeID })*@
                                                @*<button class="btn-u btn-u-red" title="Xem trên bản đồ" onclick="openWindowPopup('/charity/ViewLodge/', @item.LodgeID)"><i class="fa fa-map-marker"></i></button>*@
                                                  <a href="#"  onclick="openWindowPopup('/Home/ViewLodge/', @lodge.LodgeID)" class="btn-u btn-u-violetRed" title="Xem trên bản đồ" style="width:40px;height:30px"><i class="fa fa-map-marker"></i></a>
                                        <a href="#"  onclick="openWindowPopup('/Charity/ViewLodge/', @lodge.LodgeID)" class="btn-u btn-u-green" title="Xem danh sách sinh viên" style="width:40px;height:30px"><i class="fa fa-group"></i></a>
                                                <a href="@Url.Action("DetailLodgeCE", "Charity", new { id = @lodge.LodgeID })" class="btn-u btn-u-violet" title="Xem Chi Tiết"><i class="fa fa-eye"></i></a>
                                                <a href="@Url.Action("RemoveLodge", "Charity", new { id = @lodge.LodgeID })" class="btn-u btn-u-red" title="Xóa nhà này"  onclick = "return showPopup('Bạn có chắc chắn muốn xóa ?', this.href, @lodge.LodgeID , 'removeOut' );" ><i class="fa fa-trash-o"></i></a>

                                            </td>
                                        }
                                        else if (!lodge.IsApproved && lodge.SponsorID != null)
                                        {
                                            <td style="vertical-align:middle"><span class="label label-danger">Chưa duyệt</span></td>
                                            <td style="vertical-align:middle">
                                                @*<button class="btn-u btn-u-red" title="Xem trên bản đồ" onclick="openWindowPopup('/charity/ViewLodge/', @item.LodgeID)"><i class="fa fa-map-marker"></i></button>*@
                                                  <a href="#"  onclick="openWindowPopup('/Home/ViewLodge/', @lodge.LodgeID)" class="btn-u btn-u-violetRed" title="Xem trên bản đồ" style="width:40px;height:30px"><i class="fa fa-map-marker"></i></a>
                                        <a href="#"  onclick="openWindowPopup('/Charity/ViewLodge/', @lodge.LodgeID)" class="btn-u btn-u-green" title="Xem danh sách sinh viên" style="width:40px;height:30px"><i class="fa fa-car"></i></a>

                                                <a href="@Url.Action("DetailLodgeCE", "Charity", new { id = @lodge.LodgeID })" class="btn-u btn-u-violet" title="Xem Chi Tiết"><i class="fa fa-eye"></i></a>
                                                <a href="@Url.Action("RemoveLodge", "Charity", new { id = @lodge.LodgeID })" style="display: none" class="btn-u btn-u-red" title="Xóa nhà này"  onclick = "return showPopup('Bạn có chắc chắn muốn xóa ?', this.href, @lodge.LodgeID , 'removeOut' );" ><i class="fa fa-trash-o"></i></a>
                                                <a href="@Url.Action("ApproveLodge", "Charity", new { id = @lodge.LodgeID })" class="btn-u btn-u-green" title="Nhận nhà này"  onclick = "return callAjaxApprove(@lodge.LodgeID);" ><i class="fa fa-ok-sign"></i></a>
                                                <a href="@Url.Action("DenieLodge", "Charity", new { id = @lodge.LodgeID })" class="btn-u btn-u-red" title="Tư chối nhà này"  onclick = "return showPopup('Bạn có chắc chắn muốn từ chối nhà này không?', this.href, @lodge.LodgeID , 'remove' );" ><i class="fa fa-trash-o"></i></a>
                                                @*  @Html.ActionLink("Remove", "DenieLodge", new { id = @item.LodgeID }, new { style = "display: none", onclick = "return showPopup('Are you sure to delete it?', this.href," + @item.LodgeID + ", 'removeOut' );" })
                                                @Html.ActionLink("Approve", "ApproveLodge", new { id = @item.LodgeID }, new { onclick = "return callAjaxApprove(" + @item.LodgeID + ")" })
                                                @Html.ActionLink("Denie", "DenieLodge", new { id = @item.LodgeID }, new { onclick = "return showPopup('Are you sure to denie it?', this.href," + @item.LodgeID + ", 'remove' );" })*@


                                            </td>
                                        }
                                    </tr>
                                        ++count;
                                    }
                                }
                            </tbody>
                        </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="@Url.Action("DetailsCharityExam", "Charity", new { id = @ViewData["ceId"] })" class="btn-u btn-u-default"><i class="fa fa-chevron-circle-left"></i>&nbsp;Quay lại</a>
</div>
