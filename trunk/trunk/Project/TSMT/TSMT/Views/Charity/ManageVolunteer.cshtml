@using TSMT.Models
@model IEnumerable<Volunteer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title_of_page">Manage Volunteers of Charity Exam</h2>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>STT</th>
                <th>Name</th>
                <th>Job</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;

                foreach (var item in Model)
                {
                <tr>
                    <td>@counter</td>
                    <td>@item.Account.Profile.Lastname @item.Account.Profile.Firstname</td>
                    <td>@item.JobName</td>
                    <td>@item.Description</td>
                    <td>
                        @Html.ActionLink("Details", "DetailsVolunteer", new { voId = @item.VolunteerID })
                        @Html.ActionLink("Remove", "RemoveVolunteer", new { voId = @item.VolunteerID }, new { onclick="return showPopup('Please confirm to delete it.', this.href);" })
                    </td>
                </tr>
                    ++counter;
                }
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Back to Manage CE", "DetailsCharityExam", new { ceId = @ViewData["ceId"] }, new { @class = "btn btn-info" })
