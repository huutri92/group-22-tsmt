@using TSMT.Models
@model Charity

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Active = "ManageCarCharity";
    ViewBag.Title = "Quản lý xe";
       
}

<link rel="stylesheet" href="~/Content/css/TSMTPopup.css">
<script src="~/Content/js/TSMTPopup.js"></script>
