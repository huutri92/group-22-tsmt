@Html.Partial("_CharitySidebarPartial")


@*<h2 class="title_of_page">Manage Cars of Charity Exam</h2>
<div class="inner-page-content inner-careers">*@

<div class="col-md-9">

    <div class="panel panel-orange margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Thông tin về xe của hội từ thiện
               <a href="@Url.Action("AddCar", "Charity", new { id = Model.CharityID })" class="btn-u btn-u-green"><i class="icon-pencil"></i>Tạo mới</a>
            </h3>
        </div>
        <div class="panel-body">
            <div id="showMessage" class="alert alert-danger fade in" style="display: none; vertical-align: middle">
                <strong>Chưa có thông tin về xe!</strong> Vui lòng nhấn vào nút "Tạo mới" để tạo thêm thông tin xe.
            </div>
            <table class="table table-hover" id="showdata">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Biển số xe</th>
                        <th>Kì thi</th>
                        <th>Tổng số chỗ</th>
                        <th>Số chỗ còn trống</th>
                        @*<th>Tên tài xế</th>
                                    <th>SĐT tài xế</th>*@
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>

                    @if (((IEnumerable<Car>)ViewData["carsOfCharity"]).Count() > 0)
                    {
                        int counter = 1;

                        foreach (var car in ViewData["carsOfCharity"] as IEnumerable<Car>)
                        {                   
                        <tr id ="@car.CarID">
                            <td>@counter</td>
                            <td>@car.NumberPlate</td>
                            @if (car.CharityExamID == null)
                            {
                                <td>Chưa thiết lập</td>
                            }
                            else
                            {
                                <td>@car.ChairitiesExam.Examination.Name</td>
                            }
                            <td>@car.TotalSlots</td>
                            <td>@car.AvailableSlots</td>
                            <td>
                                @if (car.AvailableSlots < car.TotalSlots)
                                {
                                    <a href="@Url.Action("DisplayRoute", "Charity", new { id = @car.CarID })" class="btn-u btn-u-red" title="Xem đường đi trên bản đồ"><i class="icon-map-marker"></i></a>
                                }
                                <a href="@Url.Action("DetailsCarCharity", "Charity", new { id = @car.CarID })" class="btn-u btn-u-pink" title="Xem chi tiết"><i class="icon-info"></i></a>
                                @if (car.SchedulesCars.FirstOrDefault() == null)
                                {
                                    <a href="@Url.Action("EditCar", "Charity", new { id = @car.CarID })" class="btn-u btn-u-blue" title="Chỉnh sửa"><i class="icon-edit"></i></a>
                                    <a href="@Url.Action("AssignCarCE", "Charity", new { id = @car.CarID })" class="btn-u" title="Sử dụng"><i class="icon-info"></i></a>
                                }
                                <a href="@Url.Action("DeleteCar", "Charity", new { id = @car.CarID })" class="btn-u btn-u-red" title="Xóa xe này"  onclick = "return showPopup('Are you sure to delete it?', this.href, @car.CarID , 'del' );" ><i class="icon-remove-sign"></i></a>
                            </td>
                        </tr>
                                ++counter;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@*@Html.ActionLink("Thêm xe", "AddCar", new { id = Model.CharityID }, new { @class = "btn btn-info" })*@
<a href="@Url.Action("AssignCarsToCe", "Charity")" id="useCar" class="btn btn-info">Sử dụng xe</a>
@Html.ActionLink("Quay lại", "Index", "", new { @class = "btn btn-info" })

@if (((IEnumerable<Car>)ViewData["carsOfCharity"]).Count() < 1)
{
    <text>
    <script type="text/javascript">
        document.getElementById("showdata").style.display = "none";
        document.getElementById("useCar").style.display = "none";
        document.getElementById("showMessage").style.display = "inline";
    </script>
    </text>
}


<script type="text/javascript">

    // perform JavaScript after the document is scriptable.

    function callAjaxApprove(carId) {
        $.ajax({
            url: 'ApproveCar/' + carId,
            type: 'GET',
            success: function (results) {
                var tr = document.getElementById(carId);
                var lastTd = tr.lastElementChild;
                var preLastTd = lastTd.previousElementSibling;

                lastTd.removeChild(lastTd.lastElementChild);
                lastTd.removeChild(lastTd.lastElementChild);

                lastTd.lastElementChild.style.display = "inline";

                var spanStatus = preLastTd.lastElementChild;
                spanStatus.textContent = "Đã duyệt";
                spanStatus.className = "label label-success";
            }
        });
        return false;
    }

    function callAjaxDelete(carId) {


        $.ajax({
            url: 'DeleteCar/' + carId,
            type: 'GET',
            success: function (results) {
                $("#" + carId).hide(800, function () {
                    $("#" + carId).remove();
                });

            }
        });
        return false;
    }

    function callAjaxDenie(carId) {


        $.ajax({
            url: 'DenieCar/' + carId,
            type: 'GET',
            success: function (results) {
                $("#" + carId).hide(800, function () {
                    $("#" + carId).remove();
                });
            }
        });
        return false;
    }

    function callAjaxRemove(carId) {


        $.ajax({
            url: 'RemoveCar/' + carId,
            type: 'GET',
            success: function (results) {
                $("#" + carId).hide(800, function () {
                    $("#" + carId).remove();
                });
            }
        });
        return false;
    }

</script>
