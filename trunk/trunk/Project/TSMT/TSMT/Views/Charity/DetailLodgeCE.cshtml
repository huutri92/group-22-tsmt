@using TSMT.Models
@model TSMT.Models.Lodge
@{
    ViewBag.Title = "Xem thông tin chi tiết nhà trọ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script>
    $(document).ready(function () {
        $('.popup-confirm').addClass("popup-remove");
    });
</script>


@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Charity")">Hội từ thiện</a></li>
                <li><a href="@Url.Action("DetailsCharityExam", "Charity", new { id = @ViewData["ceId"] })">Đợt thi</a></li>
                <li><a href="@Url.Action("ManageLodge", "Charity", new { id = @ViewData["ceId"] })">Quản lý chỗ ở</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_CharitySidebarPartial")


<div class="col-md-9">
    <div class="panel panel-orange margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>Thông tin chi tiết nhà trọ
            </h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <td>Địa chỉ</td>
                    <td>@Model.Address</td>
                </tr>
                @if (@Model.SponsorID != null)
                {
                    <tr>
                        <td>Người tài trợ</td>
                        <td>@Model.Sponsor.Account.Profile.Lastname @Model.Sponsor.Account.Profile.Firstname</td>
                    </tr>
                }

                <tr>
                    <td>Tổng số phòng</td>
                    <td>@Model.Rooms.Count(r => r.CharityExamID != null)</td>
                </tr>
                <tr>
                    <td>Tổng số chỗ trọ</td>
                    <td>@Model.TotalSlotsInUsed</td>
                </tr>
                <tr>
                    <td>Số chỗ còn trống</td>
                    <td>@Model.AvailableSlots</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="panel panel-orange margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>Thông tin chi tiết phòng
            </h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover table-bordered ">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên phòng</th>
                        <th>Tổng số chỗ</th>
                        <th>Số chỗ còn trống</th>
                        @*<th>Actions</th>*@
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;

                        foreach (var item in ViewData["rooms"] as IEnumerable<Room>)
                        {
                        <tr id ="@item.RoomID">
                            <td>@counter</td>
                            <td>@item.RoomName</td>
                            <td>@item.TotalSlots</td>
                            <td>@item.AvailableSlots</td>
                            @*                        <td>
                            
                            @Html.ActionLink("Edit", "EditRoom", new { roomId = @item.RoomID })
                            @Html.ActionLink("Delete", "DeleteRoom", new { id = @item.RoomID }, new { onclick="return showPopup('Are you sure to delete it?', this.href," + @item.RoomID + ", 'del' );" })
                        </td>*@
                        </tr>
                            ++counter;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

