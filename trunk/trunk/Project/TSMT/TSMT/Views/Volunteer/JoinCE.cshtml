@model IEnumerable<TSMT.Models.Volunteer>
@{
    ViewBag.Title = "JoinCE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="text-align: center">
    <h2>Tham Gia Tổ Chức</h2>
</div>
<div class="inner-page-content inner-careers">
    <div class="container">
        <div class="inner-tab">
            <ul id="mytab" class="nav nav-tabs">
                <li class="active"><a href="#one" data-toggle="tab">Tên Tổ Chức Đang  Tham Gia</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active" id="one">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Kì Thi</th>
                                <th>Tên nhà tài trợ</th>
                                <th>Quận</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (@item.CharityExamID != null)
                                {
                                    <tr>
                                    <td>@item.ChairitiesExam.Examination.Name</td>
                                    <td>@item.ChairitiesExam.Charity.Account.Profile.Lastname @item.ChairitiesExam.Charity.Account.Profile.Firstname</td>
                                    <td>@item.ChairitiesExam.District.Name</td>
                                </tr>
                                }
                                else{
                                    <tr> 
                                    <td>Hiện Tại! Bạn chưa là thành viên của Tổ Chức Nào</td>
                                    <td>@Html.ActionLink("Tham Gia Tổ Chức", "JoinNewCE", null,new { @class="btn btn-info" } )</td>
                                    </tr>
                            }
                                
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
@Html.ActionLink("Quay Lại", "Index", null,new { @class="btn btn-info" } )