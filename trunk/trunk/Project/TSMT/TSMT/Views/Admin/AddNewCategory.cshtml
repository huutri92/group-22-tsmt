@model TSMT.Models.Category

@{
    ViewBag.Title = "AddNewCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_AdminSidebarPartial")
<h2 class="title_of_page">Tạo Mới Danh Mục Tin Tức</h2>

@using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post))
{
    <div class="col-md-5">
        <div class="panel panel-orange margin-bottom-20">
            <div class="panel-heading">
                <h5 class="panel-title"><i class="icon-list"></i>&nbsp;Tạo mới danh mục
                </h5>
            </div>
            <div class="panel-body">
                <table>
                    <tr>
                        <td style="vertical-align: middle">Tên danh mục</td>
                        <td>
                            <input type="text" name="cateName" id="cateName" class="form-control" /></td>
                    </tr>
                </table>
            </div>
        </div>
        <div style="float: right">
            <button type="submit" class="btn-u btn-u-sea"><i class="icon-save">&nbsp;Tạo mới</i></button>
            <button type="button" class="btn-u btn-u-red" onclick="location.href ='/Admin/ManageCategory/'"><i class="icon-remove-circle"></i>&nbsp;Hủy</button>

        </div>
    </div>
}