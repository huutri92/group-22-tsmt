@{
    ViewBag.Title = "Manage Category";
    ViewBag.Active = "ManageCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TSMT.Models
@model IEnumerable<Category>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_AdminSidebarPartial")

<div class="col-md-9"></div>
<div class="col-md-5">
    <div class="panel panel-red margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>All Categories 
                <a href="@Url.Action("AddNewCategory", "Admin")" class="btn-u btn-u-green"><i class="icon-plus"></i>Tạo mới</a>
            </h3>
            <div class="devider"></div>

        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên Danh Mục</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>@i</td>
                            <td>@item.CategoryName</td>
                            <td>
                                @*@Html.ActionLink("Delete", "DeleteCategory", new { id = @item.CategoryID })
                                @Html.ActionLink("Edit", "EditCategory", new { id = @item.CategoryID })*@
                                <a href="@Url.Action("EditCategory", "Admin")" class="btn-u btn-u-blue"><i class="icon-edit"></i> Edit </a>
                                <a href="@Url.Action("DeleteCategory", "Admin")" class="btn-u btn-u-orange"><i class="icon-trash"></i> Delete </a>
                            </td>
                        </tr>
                            i = i + 1;
                        }
                    }
                </tbody>
            </table>
        </div>
        @*@Html.ActionLink("Tạo mới", "AddNewCategory", null, new { @class = "btn-u btn-u-red" })*@
        @*<button class="btn-u btn-u-default" onclick="window.history.back(-1);">Back</button>*@
    </div>
    <a href="#" class="btn-u btn-u-default"><i class="icon-chevron-sign-left" onclick="window.history.back(-1);"></i> Quay lại </a>
    @*<a href="@Url.Action("AddCategory","Admin")" class="btn-u btn-u-green"><i class="icon-plus"></i> Tạo mới</a>*@
</div>
