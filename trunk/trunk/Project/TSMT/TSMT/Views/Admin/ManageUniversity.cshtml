@{
    ViewBag.Title = "Manage Universities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using TSMT.Models
@model IEnumerable<University>

<h2 class="title_of_page">@ViewBag.Title</h2>
<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered ">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên trường</th>
                <th>Mã trường</th>
                <th>Địa chỉ</th>
                <th>Website</th>
                <th>Số điện thoại</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
                foreach (var item in Model)
                {
                <tr>
                    <td>@counter</td>
                    <td>@item.Name</td>
                    <td>@item.UniversityCode</td>
                    <td>@item.Address</td>
                    <td>
                        <a href="@item.Website">@item.Website</a>
                    </td>
                    <td>@item.Phone</td>
                    <td>
                        @Html.ActionLink("Edit", "EditUniversity", new { id = @item.UniversityID })
                        @if (item.IsRemovable)
                        {
                            @Html.ActionLink("Delete", "DeleteUniversity", new { id = @item.UniversityID }, new { onclick = "return showPopup('Please confirm to delete it.', this.href);" })
                        }
                    </td>
                </tr>
                        ++counter;
                }
            }
        </tbody>
    </table>
    @Html.ActionLink("Create", "AddUniversity", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Back to Control Panel", "/", null, new { @class = "btn btn-info" })
</div>
