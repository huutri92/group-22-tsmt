@{
    ViewBag.Title = "Quản lý thông tin các trường ĐHCĐ";
    ViewBag.Active = "ManageUniversity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model IEnumerable<University>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_AdminSidebarPartial")

<div class="col-md-9">
    <div class="panel panel-red margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Tất cả thông tin về trường ĐHCĐ hiện có trong TSMT
                <a href="@Url.Action("AddUniversity", "Admin")" class="btn-u btn-u-default"><i class="icon-plus"></i>Tạo mới</a>
            </h3>
        </div>

        <div class="panel-body">
            <div id="showMessage" class="alert alert-danger fade in" style="display: none; vertical-align: middle">
                <strong>Chưa có thông tin trường ĐHCĐ trong cơ sở dữ liệu!</strong> Bạn hãy click vào nút "Tạo mới" để tạo thông tin trường ĐHCĐ.
            </div>
            <table class="table table-hover"  id="showdata">
                <thead>
                    <tr>
                        <th>#</th>
                        <th style="vertical-align: middle">Tên trường</th>
                        <th style="vertical-align: middle">Mã trường</th>
                        <th style="vertical-align: middle">Địa chỉ</th>
                        @*  <th>Website</th>
                        <th>Số điện thoại</th>*@
                        <th style="vertical-align: middle">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() < 1)
                    {
                        <tr>
                            <td>
                                <script type="text/javascript">
                                    document.getElementById("showdata").style.display = "none";
                                    document.getElementById("showMessage").style.display = "inline";
                                </script>
                            </td>
                        </tr>
                    }
                    else
                    {
                        int counter = 1;
                        foreach (var item in Model)
                        {
                        <tr>
                            <td style="vertical-align: middle">@counter</td>
                            <td style="vertical-align: middle">@item.Name</td>
                            <td style="vertical-align: middle">@item.UniversityCode</td>
                            <td style="vertical-align: middle">@item.Address</td>
                            @*  <td>
                                <a href="@item.Website">@item.Website</a>
                            </td>
                            <td>@item.Phone</td>*@
                            <td>
                                <a href="@Url.Action("EditUniversity", "Admin", new { id = @item.UniversityID })"  class="btn-u btn-u-blue" title="Thay đổi thông tin trường ĐHCĐ"><i class="icon-edit"></i></a>
                                @if (item.IsRemovable)
                                {
                                    <a href="@Url.Action("DeleteUniversity", "Admin", new { id = @item.UniversityID })" class="btn-u btn-u-red" title="Xóa thông tin trường ĐHCĐ" onclick="return showPopup('Bạn có muốn xóa tất cả thông tin về trường ĐHCĐ này không?', this.href);"><i class="icon-trash"></i></a>
                                }
                            </td>
                        </tr>
                                ++counter;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a href="@Url.Action("Index", "Admin")" class="btn-u btn-u-sea"><i class="icon-chevron-sign-left"></i>&nbsp;Quay lại </a>
</div>
