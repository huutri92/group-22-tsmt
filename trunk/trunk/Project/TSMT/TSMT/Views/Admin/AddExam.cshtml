@{
    ViewBag.Title = "AddExam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>AddExam</h2>
@model TSMT.Models.ManageExamModel

<div class="inner-page-content inner-careers">
    <div class="container">

        @using (Html.BeginForm("AddNewExam", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="inner-tab">
                <!-- Nab Bar Tan Menu list -->
                <ul id="mytab" class="nav nav-tabs">
                    <li class="active"><a href="#one" data-toggle="tab">Tạo mới kỳ thi</a></li>
                </ul>
                <!-- Content for each menu item -->
                <div class="tab-content">
                    <!-- First Content for Nav bar -->
                    <div class="tab-pane fade in active" id="one">
                        <form class="form-horizontal" role="form">

                            <div class="form-group">
                                <label for="name" class="col-md-2 control-label">Tên kỳ thi</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Examination.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                    @*<input type="text" class="form-control" id="name" placeholder="Nhập tên kỳ thi">*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="username" class="col-md-2 control-label">Ngày bắt đầu</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Examination.BeginDate, new { type = "date" })
                                    @Html.ValidationMessageFor(model => model.BeginDate)
                                    @*<input type="date" class="form-control" id="username">*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="email" class="col-md-2 control-label">Ngày kết thúc</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Examination.EndDate, new { type = "date" })
                                    @Html.ValidationMessageFor(model => model.EndDate)
                                    @*<input type="date" class="form-control" id="email">*@
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @*<button type="submit" class="btn btn-info">Tạo mới</button>*@
                                    <input type="submit" value="Tạo mới" class="btn btn-info" style="width: 100px; font-weight: bold" />
                                    <input type="reset" value="Làm lại" class="btn btn-primary" style="width: 100px; font-weight: bold" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
