@{
    ViewBag.Title = "Manage Universities-Examinations";
    ViewBag.Active = "ManageUniversityExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model IEnumerable<UniversitiesExamination>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_AdminSidebarPartial")


<div class="col-md-9">
    <div class="panel panel-red margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>All Universities Examination Information
                <a href="@Url.Action("AddUniversity", "Admin")" class="btn-u btn-u-green"><i class="icon-pencil"></i>Create</a>
            </h3>

        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>University</th>
                        <th>Examination</th>
                        <th>Day begin</th>
                        <th>Day end</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>@counter</td>
                            <td>@item.University.Name</td>
                            <td>@item.Examination.Name</td>
                            <td>@item.Examination.BeginDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.Examination.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @*@Html.ActionLink("Manage Venues", "ManageVenue", new { id = @item.UniExamID })*@
                                <a href="@Url.Action("ManageVenue", "Admin", new { id = @item.UniExamID })" class="btn-u btn-u-yellow"><i class="icon-hand-right"></i>Manage Venues </a>
                                @if (item.IsRemovable)
                                {
@* @Html.ActionLink("Delete", "DeleteUniversityExam", new { id = @item.UniExamID }, new { onclick = "return showPopup('Please confirm to delete it.', this.href);" })*@
                                    <a href="@Url.Action("DeleteUniversityExam", "Admin", new { id = @item.ExaminationID })" class="btn-u btn-u-orange" onclick="return showPopup('Please confirm to delete it.', this.href);"><i class="icon-trash"></i>Delete </a>
                                }
                            </td>
                        </tr>
                            ++counter;
                        }
                      
                    }
                </tbody>
            </table>
            @*  @Html.ActionLink("Create", "AddUniversityExam", null, new { @class = "btn btn-info" })
            @Html.ActionLink("Back to Control Panel", "/", null, new { @class = "btn btn-info" })*@
        </div>
    </div>
    <a href="@Url.Action("Index", "Admin")" class="btn-u btn-u-default"><i class="icon-chevron-sign-left"></i>Back </a>
</div>
