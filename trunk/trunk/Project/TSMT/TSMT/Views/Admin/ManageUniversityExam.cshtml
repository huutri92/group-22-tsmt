@{
    ViewBag.Title = "Thông tin đợt thi của các trường ĐH-CĐ";
    ViewBag.Active = "ManageUniversityExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model IEnumerable<UniversitiesExamination>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_AdminSidebarPartial")


<div class="col-md-9">
    <div class="panel panel-red margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Thông tin đợt thi của các trường ĐH-CĐ năm @DateTime.Now.Year
                <a href="@Url.Action("AddUniversityExam", "Admin")" class="btn-u btn-u-default"><i class="icon-plus"></i>Tạo mới</a>
            </h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên trường</th>
                        <th>Mã trường</th>
                        <th>Đợt thi</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 1;
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>@counter</td>
                            <td>@item.University.Name</td>
                            <td>@item.University.UniversityCode</td>
                            <td>@item.Examination.Name</td>
                            <td>@item.Examination.BeginDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.Examination.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("ManageVenue", "Admin", new { id = @item.UniExamID })" class="btn-u btn-u-yellow"><i class="icon-hand-right"></i>&nbsp;Địa điểm thi</a>
                                @if (item.ExaminationsPapers.Count == 0)
                                {
                                    <a href="@Url.Action("DeleteUniversityExam", "Admin", new { id = @item.UniExamID })" class="btn-u btn-u-orange" onclick="return showPopup('Please confirm to delete it.', this.href);"><i class="icon-trash"></i>&nbsp;Xóa </a>
                                }
                            </td>
                        </tr>
                            ++counter;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <a href="@Url.Action("Index", "Admin")" class="btn-u btn-u-sea"><i class="icon-chevron-sign-left"></i>&nbsp;Quay lại </a>
</div>
