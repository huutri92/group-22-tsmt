@{
    ViewBag.Title = "Thay đổi thông tin địa điểm thi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TSMT.Models
@model TSMT.Models.Venue

<link href="~/Content/css/TSMTPlaces.css" rel="stylesheet">
<link href="~/Content/css/TSMTPopup.css" rel="stylesheet">
<script src="~/Content/js/jquery.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry,places&sensor=false"></script>
<script src="~/Content/js/TSMTPlaces.js"></script>
<script src="~/Content/js/TSMTPopup.js"></script>

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Admin")">Admin</a></li>
                <li><a href="@Url.Action("ManageUniversity", "Admin")">Thông tin các trường ĐHCĐ</a></li>
                <li><a href="@Url.Action("ManageVenue", "Admin", new { id = @Model.UniExamID })">Thông tin địa điểm thi</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}

@using (Html.BeginForm("EditVenue", "Admin", FormMethod.Post))
{
    <input type="hidden" name="veId" value="@Model.VenueID"/>
    <input type="hidden" id="Longitude" name="Longitude" value="@Model.Longitude"/>
    <input type="hidden" id="Latitude" name="Latitude" value="@Model.Latitude"/>
    <div id="map_container" style="width: 100%; height: 500px;">
        <div id="searchBox" style="margin: 10px 10px">
            <input type="text" id="Address" name="Address" />
            @*<input type="button" id="btnGoThere" value="Đi đến" />*@
             <button type="button" id="btnGoThere" class="btn-u btn-u-dark-blue"><i class="fa fa-map-marker"></i>&nbsp;Đi đến</button>
        </div>
        <div id="map_canvas" style="width: 100%; height: 100%;"></div>
    </div>
    <button type="submit" class="btn-u btn-u-sea" onclick="return PrepareDataToSubmit()"><i class="fa fa-save">&nbsp;Lưu thay đổi</i></button>
    <a href="@Url.Action("ManageVenue", "Admin", new { id = @Model.UniExamID })" class="btn-u btn-u-sea"><i class=" fa fa-chevron-circle-left"></i>&nbsp;Quay lại</a>
}

<script type="text/javascript">
    $(document).ready(function () {
        initialize({lat:@Model.Latitude, lng: @Model.Longitude, text: "@Html.Raw(@Model.Address)"});

        // submit
        $('.popup-confirm').click(function () {
            $("#Longitude").val(marker.getPosition().lng());
            $("#Latitude").val(marker.getPosition().lat());
            $("#FormAddVenue").submit();
        });

        //$('html').animate({ scrollTop: $("#scrollToMe").offset().top - 20 }, 'slow');
    });
</script>
