@using TSMT.Models
@model IEnumerable<ChairitiesExam>

@{
    ViewBag.Title = "View Charity";
    ViewBag.Active = "ViewCharity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">
    function filterCharity(id) {
        $.ajax({
            url: 'getCharityWithCondition/' + id,
            type: 'GET',
            success: function (results) {
                $("#charityName").html("");
                for (i in results) {
                    var r = results[i];
                    $('#loadCharity a').attr('href', function (index, Oldhref) {
                        return Oldhref.replace(/12/, r.value)
                    });
                    $("#charityName").append(r.name);
                }
            }
        });
    }
</script>


@section Breadcrumbs {
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">Hội từ thiện</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                <li class="active">Hội từ thiện</li>
            </ul>
        </div>
    </div>
}

<div class="sorting-block">
    <ul class="sorting-nav sorting-nav-v1 text-center">
        <li class="filter" data-filter="all">Tất cả Hội từ thiện </li>
        @foreach (var item in (List<Examination>)ViewData["Exam"])
        {
            <li class="filter" data-filter="@item.ExaminationID">&nbsp;@item.Name</li>
        }

    </ul>

    <ul class="row sorting-grid">

        @foreach (var item in Model)
        { 
           @* @if(Model.Where(r=>r.CharityID).Count<1)
            {
                
            }*@
            <li class="col-md-3 col-sm-6 col-xs-12 mix @item.ExamID" data-cat="@item.ExamID">
                <a href="@Url.Action("ViewDetailCharity", "Home", new { id = @item.CharityExamID })">

                    <img class="img-responsive" src="~/Content/img/main/8.jpg" alt="">

                    <span class="sorting-cover">
                        <span>@item.Charity.Name - @item.Examination.Name</span>
                        <p>@item.Description</p>
                    </span>
                </a>
            </li>             
        }



    </ul>

    <div class="clearfix"></div>
</div>
<!-- End Portfolio Sorting Blocks -->












