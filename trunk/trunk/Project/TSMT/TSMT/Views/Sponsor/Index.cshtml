@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Nhà tài trợ";
    ViewBag.Active = "SponsorHome";
}


@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>

                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>

}
@Html.Partial("_SponsorSidebarPartial")


<div class="col-md-9">
    <div class="row servive-block margin-bottom-10">
        
        <a href="@Url.Action("ManageCar", "Sponsor")">
            <div class="col-md-3 col-sm-7">
                <div class="servive-block-in servive-block-colored servive-block-sea">
                    <h4>Quản lý <br /> xe</h4>
                    <div><i class="fa fa-user"></i></div>
                    <p>HDSD</p>
                </div>
            </div>
        </a>
        <a href="@Url.Action("ManageFund", "Sponsor")">
            <div class="col-md-3 col-sm-6">
                <div class="servive-block-in servive-block-colored servive-block-orange">
                    <h4>Quản lý <br /> tiền tài trợ</h4>
                    <div><i class="fa fa-flag"></i></div>
                    <p>HDSD</p>
                </div>
            </div>
        </a>
        <a href="@Url.Action("ManageLodge", "Sponsor")">
            <div class="col-md-3 col-sm-6">
                <div class="servive-block-in servive-block-colored servive-block-red">
                    <h4>Quản lý <br /> chỗ trọ</h4>
                    <div><i class="fa fa-lightbulb"></i></div>
                    <p>HDSD</p>
                </div>
            </div>
        </a>
    </div>

    <div class="row servive-block margin-bottom-10">
        <a href="@Url.Action("AddResource", "Sponsor")">
            <div class="col-md-3 col-sm-6">
                <div class="servive-block-in servive-block-colored servive-block-blue">
                    <h4>Ủng hộ<br /> tài nguyên</h4>
                    <div><i class="fa fa-user"></i></div>
                    <p>HDSD</p>
                </div>
            </div>
        </a>
        <a href="@Url.Action("ViewStatistic", "Sponsor")">
            <div class="col-md-3 col-sm-6">
                <div class="servive-block-in servive-block-colored servive-block-green">
                    <h4>Xem<br /> Thống Kê</h4>
                    <div><i class="fa fa-building"></i></div>
                    <p>HDSD</p>
                </div>
            </div>
        </a>
        
       
    </div>
</div>
