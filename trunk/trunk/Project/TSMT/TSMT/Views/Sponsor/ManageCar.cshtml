@using TSMT.Models
@model IEnumerable<Car>
@{
    ViewBag.Title = "Quản lý xe";
    ViewBag.Active = "ManageCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Sponsor")">Nhà tài trợ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_SponsorSidebarPartial")



<div class="col-md-9">
    <div class="panel panel-green margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="icon-list"></i>Quản lý xe
                <a href="@Url.Action("AddCar", "Sponsor")" class="btn-u btn-u-green"><i class="icon-pencil"></i>Tạo Mới Xe</a>
            </h3>
        </div>
        <div class="panel-body">
            <div class="tab-v1">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#notsponsored" data-toggle="tab">Xe Chưa Tài Trợ</a></li>
                    <li><a href="#sponsored" data-toggle="tab">Xe Đã Tài Trợ</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="notsponsored">
                        <div id="showMessage" class="alert alert-danger fade in" style="display: none">
                            @*<button type="button" class="close" data-dismiss="alert">×</button>*@
                            <strong>Bạn không có xe để tài trợ!</strong> Bạn hãy click vào nút "Tạo mới" để tạo thêm xe cho mình.
                        </div>
                        <table class="table table-hover" id="showdata">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Biển số</th>
                                    <th>Số chỗ </th>
                                    <th>Tên tài xế</th>
                                    <th>SĐT tài xế</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @if ((Model.Count(r => r.CharityExamID == null) == 0 ))
                                {
                                    <tr>
                                        <td>
                                            <script type="text/javascript">
                                                document.getElementById("showdata").style.display = "none";
                                                document.getElementById("showMessage").style.display = "block";
                                            </script>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    int counter = 1;

                                    foreach (var car in ViewData["CarNotSponsored"] as IEnumerable<Car>)
                                    {                   
                                    <tr>
                                        <td>@counter</td>
                                        <td>@car.NumberPlate</td>
                                        <td>@car.TotalSlots</td>
                                        <td>@car.DriverName</td>
                                        <td>@car.DriverPhone</td>
                                        <td>
                                            @Html.ActionLink("Chỉnh sửa", "EditCarNotCe", new { carId = @car.CarID })
                                            @Html.ActionLink("Tài Trợ", "EditCar", new { carId = @car.CarID })
                                            @Html.ActionLink("Delete", "DeleteCar", new { carId = @car.CarID }, new { onclick = "return showPopup('Are you sure to delete it?', this.href);" })
                                        </td>


                                    </tr>
                                        ++counter;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="sponsored">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Kỳ thi</th>
                                    <th>Tài Trợ Cho</th>
                                    <th>Biển số</th>
                                    <th>Số chỗ đã có thí sinh</th>
                                    <th>Tên tài xế</th>
                                    <th>SĐT tài xế</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 1;

                                    foreach (var item in ViewData["CarSponsored"] as IEnumerable<Car>)
                                    {                   
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.ChairitiesExam.Examination.Name</td>
                                        <td>@item.ChairitiesExam.CharityExamName</td>
                                        <td>@item.NumberPlate</td>
                                        <td>@(item.TotalSlots - item.AvailableSlots)/@item.TotalSlots</td>
                                        <td>@item.DriverName</td>
                                        <td>@item.DriverPhone</td>
                                        @if (item.IsApproved)
                                        {
                                            <td><span class="label label-success">Đã tài trợ</span></td>
                                            <td></td>
                                            
                                        }
                                        else if (!item.IsApproved)
                                        {
                                            <td><span class="label label-danger">Chưa xác nhận</span></td>
                                            <td>
                                                @Html.ActionLink("Chỉnh sửa", "EditCarNotCe", new { carId = @item.CarID })
                                                @Html.ActionLink("Hủy tài Trợ", "DenieCar", new { carId = @item.CarID })
                                                @Html.ActionLink("Xóa", "DeleteCar", new { carId = @item.CarID }, new { onclick = "return showPopup('Are you sure to delete it?', this.href);" })
                                            </td>
                                        }
                                    </tr>
                                        ++count;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
            @Html.ActionLink("Back to Index", "Index", null, new { @class = "btn btn-info" })

</div>


