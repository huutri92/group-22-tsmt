@using TSMT.Models
@model TSMT.Models.Lodge

@{
    ViewBag.Title = "Tạo Mới Phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<link href="/Content/css/TSMTValidation.css" rel="stylesheet">
<script type="text/javascript" src="/Content/js/TSMTValidation.js"></script>
@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Sponsor")">Nhà tài trợ</a></li>
                <li><a href="@Url.Action("ManageCar", "Sponsor")">Quản Lý Phòng</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_SponsorSidebarPartial")
@using (Html.BeginForm("AddRoom", "Sponsor", FormMethod.Post, new { id = "FormValidate" }))
{
    <div class="col-md-5">
        <div class="panel panel-green margin-bottom-20">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="icon-list"></i>Tạo mới phòng
                </h3>
            </div>
            <input type="hidden" name="lodgeId" value="@Model.LodgeID"/>
             <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <td>Tên phòng</td>
                    <td>
                        <input type="text" name="RoomName" id="RoomName"/></td>
                </tr>
                <tr>
                    <td>Tổng số chỗ</td>
                    <td>
                        <input type="text" name="TotalSlots" id="TotalSlots" /></td>
                </tr>
            </table>
                 </div>
        </div>
         <div style="float: right">
            <button type="submit" class="btn-u btn-u-sea"><i class="icon-plus">&nbsp;Tạo</i></button>
        </div>
        <button type="button" onclick="location.href ='/Sponsor/ManageRoom/'" class="btn-u btn-u-default"><i class="icon-chevron-sign-left"></i>&nbsp;Quay lại</button>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
      
        var reTotalSlots = /^\d{1,2}$/;
      
        $("#TotalSlots").blur(function () { checkRegex("TotalSlots", reTotalSlots, "Số chỗ ngồi không hợp lý", true) });
        $("#RoomName").blur(function () { checkEmpty("RoomName") });
        $("#FormValidate").submit(function (e) {
            var isValidated = true;
            isValidated = checkRegex("TotalSlots", reTotalSlots, "Số chỗ ngồi không hợp lý", true) && isValidated;
            isValidated = checkEmpty("RoomName") && isValidated;
            if (isValidated) return true;
            e.preventDefault();
        });
    });
</script>