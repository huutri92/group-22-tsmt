@using TSMT.Models
@model TSMT.Models.Lodge

@{
    ViewBag.Title = "Tạo Mới Phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Sponsor")">Nhà tài trợ</a></li>
                <li><a href="@Url.Action("ManageCar", "Sponsor")">Quản Lý Phòng</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_SponsorSidebarPartial")
@using (Html.BeginForm("AddRoom", "Sponsor", FormMethod.Post))
{
    <div class="col-md-7">
        <div class="panel panel-green margin-bottom-20">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="icon-list"></i>Tạo mới phòng
                </h3>
            </div>
            <input type="hidden" name="lodgeId" value="@Model.LodgeID"/>
             <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <td>Tên phòng</td>
                    <td>
                        <input type="text" name="RoomName" /></td>
                </tr>
                <tr>
                    <td>Tổng số chỗ</td>
                    <td>
                        <input type="text" name="TotalSlots" /></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a href="@Url.Action("ManageRoom", "Sponsor")" class="btn-u btn-u-default"><i class="icon-chevron-sign-left"></i>&nbsp;Quay lại</a>
                        <input type="submit" value="Tạo Mới" class="btn btn-info" />
                        <input type="reset" value="Làm Mới" class="btn btn-info" />
                    </td>
                </tr>
            </table>
                 </div>
        </div>
    </div>
}