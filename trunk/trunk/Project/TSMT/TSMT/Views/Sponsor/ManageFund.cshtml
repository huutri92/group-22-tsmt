@using TSMT.Models
@model IEnumerable<Fund>
@{
    ViewBag.Title = "Quản lý tiền tài trợ";
    ViewBag.Active = "ManageFund";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="/Content/css/TSMTPopup.css" rel="stylesheet">
<script src="/Content/js/TSMTPopup.js"></script>
@section Breadcrumbs {
    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="pull-left">@ViewBag.Title</h1>
            <ul class="pull-right breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                <li><a href="@Url.Action("Index", "Sponsor")">Nhà tài trợ</a></li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
}
@Html.Partial("_SponsorSidebarPartial")



<div class="col-md-9">
    <div class="panel panel-green margin-bottom-20">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i>Quản lý tiền
                <a href="@Url.Action("AddFund", "Sponsor")" class="btn-u btn-u-blue"><i class="fa fa-pencil"></i>Tài Trợ</a>
            </h3>

        </div>
        <div class="panel-body">
            <div id="showMessage" class="alert alert-danger fade in" style="display: none">
                            @*<button type="button" class="close" data-dismiss="alert">×</button>*@
                            <strong>Bạn chưa tài trợ tiền!</strong> Bạn hãy nhấn vào nút "Tài trợ" để tài trợ tiền.
                        </div>
            <table class="table table-hover" id="showdata">
                <thead>
                    
                     
                    <tr>
                        <th>STT</th>
                        <th>Kỳ thi</th>
                        <th>Tài Trợ Cho</th>
                        <th>Số Tiền</th>
                        <th>Trại Thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                     @if ((Model.Count(r => r.FundID != null) == 0 ))
                                {
                                    <tr>
                                        <td style="vertical-align:middle">
                                            <script type="text/javascript">
                                                document.getElementById("showdata").style.display = "none";
                                                document.getElementById("showMessage").style.display = "block";
                                            </script>
                                        </td>
                                    </tr>
                                }
                    else{
                        int counter = 1;
                        foreach (var item in Model)
                        {
                            
                        <tr>
                            <td style="vertical-align:middle">@counter</td>
                            <td style="vertical-align:middle">@item.ChairitiesExam.Examination.Name</td>
                            <td style="vertical-align:middle">@item.ChairitiesExam.Charity.Name</td>
                            <td style="vertical-align:middle">@item.FundSponsored.ToString("##,### VNĐ")</td>
                           
                            @if (item.IsApproved)
                            {
                                <td style="vertical-align:middle"><span class="label label-success">Đã Gửi</span></td>
                                <td style="vertical-align:middle"></td>
                            }
                            else
                            {
                                <td style="vertical-align:middle"><span class="label label-danger">Chờ Xác Nhận</span></td>
                                <td style="vertical-align:middle">
                                     <a href="@Url.Action("EditFund", "Sponsor", new { id = @item.FundID })" class="btn-u btn-u-dark" title="Chỉnh sửa"><i class="fa fa-pencil-square-o"></i></a>
                                     <a href="@Url.Action("DeleteFund", "Sponsor", new { id = @item.FundID})" onclick = "return showPopup('Bạn có chắc sẽ hủy tài trợ số tiền này?', this.href);" class="btn-u btn-u-red" title="Hủy tài trợ"><i class="fa fa-trash-o"></i></a>
                                </td>
                            }

                        </tr>
                            ++counter;
                        }
                    }
                    <tr>
                        <td colspan ="7">Tổng số tiền đã tài trợ : <span style="color:black"><b>@ViewData["totalfunds"] VNĐ</b></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        
    </div>
    <a href="@Url.Action("Index", "Sponsor")" class="btn-u btn-u-default"><i class="fa fa-chevron-circle-left"></i>&nbsp;Quay về</a>
</div>

