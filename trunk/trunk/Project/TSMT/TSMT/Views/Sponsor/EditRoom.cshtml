@using TSMT.Models
@model TSMT.Models.Room
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title_of_page">Edit Room</h2>
@using (Html.BeginForm("EditRoom", "Sponsor", FormMethod.Post))
{
    <input type="hidden" id="roomId" name="roomId" value="@Model.RoomID"/>
    <table>
         <tr>
            <td>Tên Phòng</td>
            <td>
                <input type="text" name="RoomName" value="@Model.RoomName" class="form-control"/></td>
        </tr>
        <tr>
            <td>Tổng số chỗ</td>
            <td>
                <input type="text" name="TotalSlots" value="@Model.TotalSlots" class="form-control"/></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="button" onclick="history.go(-1);" value="Quay lại"/>
                <input type="submit" value="Submit" class="btn btn-info" />
                <input type="reset" value="Reset" class="btn btn-info" />
            </td>
        </tr>
    </table>
}