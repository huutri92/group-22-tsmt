@{
    ViewBag.Title = "Quản lý tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TSMT.Models
@model IEnumerable<Article>
<h2>Quản lý tin tức</h2>

<div class="inner-page-content inner-careers">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tiêu đề</th>
                <th>Người đăng</th>
                <th>Ngày đăng</th>
                <th>Trạng thái</th>
                <th>Công cụ</th>
            </tr>
        </thead>
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <th>@i</th>
                    <td>@item.Title</td>
                    <td>@item.Account.Profile.Lastname @item.Account.Profile.Middlename @item.Account.Profile.Firstname</td>
                    <td>@item.CreatedOn</td>
                    <td>
                        @if (@item.IsAprroved == false)
                        {
                            <span>Chưa duyệt</span>
                        }
                        else
                        {
                            <span>Đã duyệt</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Details", "DetailPost", new { arId=@item.ArticleID })
                        @Html.ActionLink("Delete", "DeletePost", null, new { arId=@item.ArticleID, @onclick="return showPopup('Bạn có chắc chắn muốn xóa bài đăng này?', this.href);"})
                    </td>
                </tr>
                i = i + 1;
            }
        }
    </table>
    @Html.ActionLink("Add new post", "AddNewPost", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Display News", "DisplayNews", null, new { @class = "btn btn-info" })
    <button class="btn btn-info" onclick="window.history.back(-1);">Back</button>
</div>
