<script type="text/javascript">
    $(document).ready(function () {
        $("i").click(function () {
            if ($("#hide")[0].style.display == '' || $("#hide")[0].style.display == 'block') {
                $("#showInformation").animate({ width: '100%' }, 'normal', function () {
                    $("#showInformation").toggleClass('col-md-9').toggleClass('col-md-12')
                })
            } else {
                $("#showInformation").animate({ width: '75%' }, 'normal', function () {
                    $("#showInformation").toggleClass('col-md-9').toggleClass('col-md-12')
                })
            }
            $("#hide").toggle('normal');
        });
    });
</script>

  <script type="text/javascript">
      function toggleDiv() {
          var duration = 1000;
          if ($("#left").width() == 0) {
              $("#left").animate({ width: "30%" }, duration);
              $("#right").animate({ width: "70%" }, duration);
          } else {
              $("#left").animate({ width: "0" }, duration);
              $("#right").animate({ width: "100%" }, duration);
          }
      }
	</script>